<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Users - Admin</title>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/topbar.css">
  <link rel="stylesheet" href="/css/dashboard.css">
  <link rel="stylesheet" href="/css/footer.css">
  <style>
    .tabs {
      display: flex;
      gap: 0;
      margin-bottom: 1.5rem;
      border-bottom: 2px solid var(--border-color, #e0e0e0);
    }
    .tab-btn {
      padding: 1rem 1.5rem;
      background: none;
      border: none;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 500;
      color: var(--text-secondary, #666);
      position: relative;
      transition: all 0.3s;
      text-decoration: none;
    }
    .tab-btn:hover {
      color: var(--primary-color, #4f46e5);
    }
    .tab-btn.active {
      color: var(--primary-color, #4f46e5);
    }
    .tab-btn.active::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      right: 0;
      height: 2px;
      background: var(--primary-color, #4f46e5);
    }
    .tab-badge {
      background: var(--primary-color, #4f46e5);
      color: white;
      font-size: 0.75rem;
      padding: 0.125rem 0.5rem;
      border-radius: 999px;
      margin-left: 0.5rem;
    }
    .tab-content {
      display: none;
    }
    .tab-content.active {
      display: block;
    }
    .users-table {
      width: 100%;
      border-collapse: collapse;
      background: var(--card-bg, white);
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
    .users-table th,
    .users-table td {
      padding: 1rem;
      text-align: left;
      border-bottom: 1px solid var(--border-color, #e0e0e0);
    }
    .users-table th {
      background: var(--bg-secondary, #f8f9fa);
      font-weight: 600;
    }
    .users-table tr:hover {
      background: var(--bg-secondary, #f8f9fa);
    }
    .role-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border-radius: 999px;
      font-size: 0.875rem;
      font-weight: 500;
    }
    .role-student { background: #dbeafe; color: #1e40af; }
    .role-sponsor { background: #d1fae5; color: #065f46; }
    .role-admin { background: #fef3c7; color: #92400e; }
    .status-active { color: #10b981; }
    .status-suspended { color: #ef4444; }
    .action-btns {
      display: flex;
      gap: 0.5rem;
    }
    .btn-sm {
      padding: 0.375rem 0.75rem;
      font-size: 0.875rem;
      border-radius: 6px;
      border: none;
      cursor: pointer;
      transition: all 0.2s;
    }
    .btn-view { background: #3b82f6; color: white; }
    .btn-view:hover { background: #2563eb; }
    .btn-suspend { background: #ef4444; color: white; }
    .btn-suspend:hover { background: #dc2626; }
    .btn-activate { background: #10b981; color: white; }
    .btn-activate:hover { background: #059669; }
    .empty-state {
      text-align: center;
      padding: 3rem;
      color: var(--text-secondary, #666);
    }
    .empty-state-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    .search-bar {
      margin-bottom: 1rem;
      display: flex;
      gap: 1rem;
    }
    .search-bar input {
      flex: 1;
      padding: 0.75rem 1rem;
      border: 1px solid var(--border-color, #e0e0e0);
      border-radius: 8px;
      font-size: 1rem;
    }
    .results-info {
      color: var(--text-secondary, #666);
      margin-bottom: 1rem;
      font-size: 0.9rem;
    }
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0,0,0,0.5);
      z-index: 1000;
      align-items: center;
      justify-content: center;
    }
    .modal.active { display: flex; }
    .modal-content {
      background: var(--card-bg, white);
      border-radius: 12px;
      padding: 2rem;
      max-width: 600px;
      width: 90%;
      max-height: 90vh;
      overflow-y: auto;
    }
    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
    }
    .modal-title { font-size: 1.25rem; font-weight: 600; }
    .modal-close {
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: var(--text-secondary, #666);
    }
    .detail-grid {
      display: grid;
      gap: 1rem;
    }
    .detail-row {
      display: grid;
      grid-template-columns: 150px 1fr;
      gap: 1rem;
    }
    .detail-label {
      font-weight: 600;
      color: var(--text-secondary, #666);
    }
  </style>
</head>
<body>
  <%- include('../partials/sidebar_admin') %>

  <div class="main-wrapper">
    <%- include('../partials/topbar', { pageTitle: 'Manage Users' }) %>

    <main class="page-content">
      <div class="container">
        <div class="dashboard-wrapper">
          <!-- Stats Cards -->
          <div class="stats-grid">
            <div class="stat-card">
              <div class="stat-header">
                <div class="stat-icon">ðŸ‘¥</div>
              </div>
              <div class="stat-value"><%= stats.total %></div>
              <div class="stat-label">Total Users</div>
            </div>
            <div class="stat-card">
              <div class="stat-header">
                <div class="stat-icon"></div>
              </div>
              <div class="stat-value"><%= stats.students %></div>
              <div class="stat-label">Students</div>
            </div>
            <div class="stat-card">
              <div class="stat-header">
                <div class="stat-icon"></div>
              </div>
              <div class="stat-value"><%= stats.sponsors %></div>
              <div class="stat-label">Sponsors</div>
            </div>
            <div class="stat-card">
              <div class="stat-header">
                <div class="stat-icon"></div>
              </div>
              <div class="stat-value"><%= stats.admins %></div>
              <div class="stat-label">Admins</div>
            </div>
          </div>

          <!-- Search Bar -->
          <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search users by name or email..." onkeyup="searchUsers()">
          </div>

          <!-- Tabs -->
          <div class="tabs">
            <a href="/admin/users" class="tab-btn <%= typeof activeTab === 'undefined' || activeTab === 'all' ? 'active' : '' %>">All Users <span class="tab-badge"><%= stats.total %></span></a>
            <a href="/admin/users?tab=students" class="tab-btn <%= activeTab === 'students' ? 'active' : '' %>">Students <span class="tab-badge"><%= stats.students %></span></a>
            <a href="/admin/users?tab=sponsors" class="tab-btn <%= activeTab === 'sponsors' ? 'active' : '' %>">Sponsors <span class="tab-badge"><%= stats.sponsors %></span></a>
          </div>

          <!-- All Users Tab -->
          <% const currentTab = typeof activeTab !== 'undefined' ? activeTab : 'all'; %>
          <div id="tab-all" class="tab-content <%= currentTab === 'all' ? 'active' : '' %>">
            <% if (users.length === 0) { %>
              <div class="empty-state">
                <div class="empty-state-icon"></div>
                <h3>No Users</h3>
                <p>No users have registered yet.</p>
              </div>
            <% } else { %>
              <% if (typeof paginationInfo !== 'undefined' && currentTab === 'all') { %>
                <p class="results-info"><%= paginationInfo %></p>
              <% } %>
              <table class="users-table" id="allUsersTable">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Joined</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach(function(user) { %>
                    <tr data-name="<%= user.fullName || '' %>" data-email="<%= user.email || '' %>">
                      <td><strong><%= user.fullName || 'N/A' %></strong></td>
                      <td><%= user.email %></td>
                      <td><span class="role-badge role-<%= user.role %>"><%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></span></td>
                      <td>
                        <% if (user.suspended) { %>
                          <span class="status-suspended">Suspended</span>
                        <% } else { %>
                          <span class="status-active">Active</span>
                        <% } %>
                      </td>
                      <td><%= user.createdAt ? new Date(user.createdAt).toLocaleDateString() : 'N/A' %></td>
                      <td>
                        <div class="action-btns">
                          <button class="btn-sm btn-view" onclick="viewUser('<%= user.id %>')">View</button>
                          <% if (user.role !== 'admin') { %>
                            <% if (user.suspended) { %>
                              <button class="btn-sm btn-activate" onclick="toggleUserStatus('<%= user.id %>')">Activate</button>
                            <% } else { %>
                              <button class="btn-sm btn-suspend" onclick="toggleUserStatus('<%= user.id %>')">Suspend</button>
                            <% } %>
                          <% } %>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
              <% if (currentTab === 'all') { %>
                <%- include('../partials/pagination') %>
              <% } %>
            <% } %>
          </div>

          <!-- Students Tab -->
          <div id="tab-students" class="tab-content <%= currentTab === 'students' ? 'active' : '' %>">
            <% if (students.length === 0) { %>
              <div class="empty-state">
                <div class="empty-state-icon"></div>
                <h3>No Students</h3>
                <p>No students have registered yet.</p>
              </div>
            <% } else { %>
              <% if (typeof paginationInfo !== 'undefined' && currentTab === 'students') { %>
                <p class="results-info"><%= paginationInfo %></p>
              <% } %>
              <table class="users-table">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Joined</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% students.forEach(function(student) { %>
                    <tr>
                      <td><strong><%= student.fullName || 'N/A' %></strong></td>
                      <td><%= student.email %></td>
                      <td>
                        <% if (student.suspended) { %>
                          <span class="status-suspended">Suspended</span>
                        <% } else { %>
                          <span class="status-active">Active</span>
                        <% } %>
                      </td>
                      <td><%= student.createdAt ? new Date(student.createdAt).toLocaleDateString() : 'N/A' %></td>
                      <td>
                        <div class="action-btns">
                          <button class="btn-sm btn-view" onclick="viewUser('<%= student.id %>')">View</button>
                          <% if (student.suspended) { %>
                            <button class="btn-sm btn-activate" onclick="toggleUserStatus('<%= student.id %>')">Activate</button>
                          <% } else { %>
                            <button class="btn-sm btn-suspend" onclick="toggleUserStatus('<%= student.id %>')">Suspend</button>
                          <% } %>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
              <% if (currentTab === 'students') { %>
                <%- include('../partials/pagination') %>
              <% } %>
            <% } %>
          </div>

          <!-- Sponsors Tab -->
          <div id="tab-sponsors" class="tab-content <%= currentTab === 'sponsors' ? 'active' : '' %>">
            <% if (sponsors.length === 0) { %>
              <div class="empty-state">
                <div class="empty-state-icon"></div>
                <h3>No Sponsors</h3>
                <p>No sponsors have registered yet.</p>
              </div>
            <% } else { %>
              <% if (typeof paginationInfo !== 'undefined' && currentTab === 'sponsors') { %>
                <p class="results-info"><%= paginationInfo %></p>
              <% } %>
              <table class="users-table">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Joined</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% sponsors.forEach(function(sponsor) { %>
                    <tr>
                      <td><strong><%= sponsor.fullName || 'N/A' %></strong></td>
                      <td><%= sponsor.email %></td>
                      <td>
                        <% if (sponsor.suspended) { %>
                          <span class="status-suspended">Suspended</span>
                        <% } else { %>
                          <span class="status-active">Active</span>
                        <% } %>
                      </td>
                      <td><%= sponsor.createdAt ? new Date(sponsor.createdAt).toLocaleDateString() : 'N/A' %></td>
                      <td>
                        <div class="action-btns">
                          <button class="btn-sm btn-view" onclick="viewUser('<%= sponsor.id %>')">View</button>
                          <% if (sponsor.suspended) { %>
                            <button class="btn-sm btn-activate" onclick="toggleUserStatus('<%= sponsor.id %>')">Activate</button>
                          <% } else { %>
                            <button class="btn-sm btn-suspend" onclick="toggleUserStatus('<%= sponsor.id %>')">Suspend</button>
                          <% } %>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
              <% if (currentTab === 'sponsors') { %>
                <%- include('../partials/pagination') %>
              <% } %>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </div>

  <!-- User Details Modal -->
  <div class="modal" id="userModal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">User Details</h3>
        <button class="modal-close" onclick="closeModal()">&times;</button>
      </div>
      <div id="userDetails"></div>
    </div>
  </div>

  <script src="/js/sidebar.js"></script>
  <script>
    const users = <%- JSON.stringify(users) %>;

    function showTab(tabName) {
      document.querySelectorAll('.tab-content').forEach(function(tab) { tab.classList.remove('active'); });
      document.querySelectorAll('.tab-btn').forEach(function(btn) { btn.classList.remove('active'); });
      document.getElementById('tab-' + tabName).classList.add('active');
      event.target.classList.add('active');
    }

    function searchUsers() {
      const search = document.getElementById('searchInput').value.toLowerCase();
      document.querySelectorAll('#allUsersTable tbody tr').forEach(function(row) {
        const name = (row.dataset.name || '').toLowerCase();
        const email = (row.dataset.email || '').toLowerCase();
        row.style.display = name.includes(search) || email.includes(search) ? '' : 'none';
      });
    }

    function viewUser(id) {
      const user = users.find(function(u) { return u.id === id; });
      if (!user) return;

      document.getElementById('userDetails').innerHTML =
        '<div class="detail-grid">' +
          '<div class="detail-row">' +
            '<span class="detail-label">Full Name:</span>' +
            '<span>' + (user.fullName || 'N/A') + '</span>' +
          '</div>' +
          '<div class="detail-row">' +
            '<span class="detail-label">Email:</span>' +
            '<span>' + user.email + '</span>' +
          '</div>' +
          '<div class="detail-row">' +
            '<span class="detail-label">Role:</span>' +
            '<span class="role-badge role-' + user.role + '">' + user.role.charAt(0).toUpperCase() + user.role.slice(1) + '</span>' +
          '</div>' +
          '<div class="detail-row">' +
            '<span class="detail-label">Status:</span>' +
            '<span class="' + (user.suspended ? 'status-suspended' : 'status-active') + '">' + (user.suspended ? 'Suspended' : 'Active') + '</span>' +
          '</div>' +
          '<div class="detail-row">' +
            '<span class="detail-label">Joined:</span>' +
            '<span>' + (user.createdAt ? new Date(user.createdAt).toLocaleDateString() : 'N/A') + '</span>' +
          '</div>' +
        '</div>';

      document.getElementById('userModal').classList.add('active');
    }

    function closeModal() {
      document.getElementById('userModal').classList.remove('active');
    }

    function toggleUserStatus(id) {
      const user = users.find(function(u) { return u.id === id; });
      const action = user && user.suspended ? 'activate' : 'suspend';

      if (!confirm('Are you sure you want to ' + action + ' this user?')) return;

      fetch('/admin/users/' + id + '/toggle-status', { method: 'POST' })
        .then(function(res) { return res.json(); })
        .then(function(data) {
          if (data.success) {
            alert(data.message);
            location.reload();
          } else {
            alert('Error: ' + data.error);
          }
        })
        .catch(function(err) { alert('Error updating user status'); });
    }
  </script>
</body>
</html>
