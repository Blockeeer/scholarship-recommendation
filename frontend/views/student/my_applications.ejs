<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Applications - Scholarship Portal</title>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/topbar.css">
  <link rel="stylesheet" href="/css/footer.css">
  <style>
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    .page-header {
      margin-bottom: 2rem;
    }

    .page-header h1 {
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    .page-header p {
      color: var(--text-secondary);
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: var(--bg-primary);
      padding: 1.5rem;
      border-radius: var(--radius-md);
      box-shadow: var(--shadow-sm);
      text-align: center;
      border: 1px solid var(--border-color);
    }

    .stat-value {
      font-size: 2rem;
      font-weight: bold;
      color: var(--primary-color);
    }

    .stat-label {
      color: var(--text-secondary);
      font-size: 0.9rem;
      margin-top: 0.25rem;
    }

    .stat-card.pending .stat-value { color: var(--status-pending); }
    .stat-card.approved .stat-value { color: var(--status-approved); }
    .stat-card.notified .stat-value { color: var(--success-500); }
    .stat-card.not-selected .stat-value { color: var(--gray-500); }

    .applications-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .application-card {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      box-shadow: var(--shadow-sm);
      overflow: hidden;
      transition: all var(--transition);
      border: 1px solid var(--border-color);
    }

    .application-card:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }

    .application-content {
      display: grid;
      grid-template-columns: 1fr auto;
      gap: 1.5rem;
      padding: 1.5rem;
      align-items: center;
    }

    .application-info h3 {
      color: var(--text-primary);
      margin: 0 0 0.5rem 0;
    }

    .application-org {
      color: var(--primary-color);
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .application-meta {
      display: flex;
      gap: 1.5rem;
      flex-wrap: wrap;
      color: var(--text-secondary);
      font-size: 0.9rem;
    }

    .application-status {
      text-align: right;
    }

    .status-badge {
      display: inline-block;
      padding: 0.5rem 1rem;
      border-radius: var(--radius-full);
      font-weight: 600;
      font-size: 0.9rem;
    }

    .status-pending {
      background: var(--status-pending-bg);
      color: #856404;
    }

    .status-under_review {
      background: var(--status-review-bg);
      color: #1e40af;
    }

    .status-approved, .status-accepted {
      background: var(--status-approved-bg);
      color: #166534;
    }

    .status-notified {
      background: var(--primary-100);
      color: var(--primary-700);
    }

    .status-not_selected {
      background: var(--gray-100);
      color: var(--gray-700);
    }

    .status-draft {
      background: #e0e7ff;
      color: #4338ca;
    }

    .rank-badge {
      display: block;
      margin-top: 0.5rem;
      font-size: 0.85rem;
      color: var(--text-secondary);
    }

    .rank-badge strong {
      color: var(--primary-color);
    }

    .card-actions {
      background: var(--bg-secondary);
      padding: 1rem 1.5rem;
      display: flex;
      gap: 1rem;
      justify-content: flex-end;
    }

    .btn-view {
      background: var(--primary-color);
      color: white;
    }

    .btn-view:hover {
      background: var(--primary-hover);
    }

    .btn-withdraw {
      background: var(--danger-500);
      color: white;
    }

    .btn-withdraw:hover {
      background: var(--danger-600);
    }

    .btn-edit {
      background: #4338ca;
      color: white;
    }

    .btn-edit:hover {
      background: #3730a3;
    }

    .btn-delete-draft {
      background: transparent;
      color: var(--danger-500);
      border: 1px solid var(--danger-500);
    }

    .btn-delete-draft:hover {
      background: var(--danger-500);
      color: white;
    }

    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      box-shadow: var(--shadow-sm);
      border: 1px solid var(--border-color);
    }

    .empty-state .icon {
      font-size: 4rem;
      margin-bottom: 1rem;
      opacity: 0.5;
    }

    .empty-state h3 {
      color: #666;
      margin-bottom: 0.5rem;
    }

    .empty-state p {
      color: #999;
      margin-bottom: 1.5rem;
    }

    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 0.75rem 1.5rem;
    }

    .results-info {
      color: var(--text-secondary);
      margin-bottom: 1rem;
      font-size: 0.9rem;
    }
  </style>
</head>
<body>
  <%- include('../partials/sidebar_student') %>

  <div class="main-wrapper">
    <%- include('../partials/topbar', { pageTitle: 'My Applications' }) %>

    <main class="page-content">
      <div class="container">
        <div class="page-header">
          <h1>My Applications</h1>
          <p>Track the status of your scholarship applications</p>
        </div>

        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-value"><%= stats.total %></div>
            <div class="stat-label">Total Applications</div>
          </div>
          <% if (stats.draft > 0) { %>
          <div class="stat-card" style="border-left: 4px solid #4338ca;">
            <div class="stat-value" style="color: #4338ca;"><%= stats.draft %></div>
            <div class="stat-label">Drafts</div>
          </div>
          <% } %>
          <div class="stat-card pending">
            <div class="stat-value"><%= stats.pending %></div>
            <div class="stat-label">Pending</div>
          </div>
          <div class="stat-card notified">
            <div class="stat-value"><%= stats.notified || 0 %></div>
            <div class="stat-label">Selected</div>
          </div>
          <div class="stat-card not-selected">
            <div class="stat-value"><%= stats.notSelected || 0 %></div>
            <div class="stat-label">Not Selected</div>
          </div>
        </div>

        <% if (applications.length > 0) { %>
          <div class="applications-list">
            <% if (typeof paginationInfo !== 'undefined') { %>
              <p class="results-info"><%= paginationInfo %></p>
            <% } %>
            <% applications.forEach(app => { %>
              <div class="application-card">
                <div class="application-content">
                  <div class="application-info">
                    <h3><%= app.scholarshipName %></h3>
                    <p class="application-org"><%= app.sponsorName %></p>
                    <div class="application-meta">
                      <span>Applied: <%= new Date(app.createdAt).toLocaleDateString() %></span>
                      <% if (app.reviewedAt) { %>
                        <span>Reviewed: <%= new Date(app.reviewedAt).toLocaleDateString() %></span>
                      <% } %>
                    </div>
                  </div>
                  <div class="application-status">
                    <span class="status-badge status-<%= app.status %>">
                      <%
                        let statusLabel = app.status;
                        if (app.status === 'draft') statusLabel = 'Draft';
                        else if (app.status === 'under_review') statusLabel = 'Under Review';
                        else if (app.status === 'notified') statusLabel = 'Selected';
                        else if (app.status === 'not_selected') statusLabel = 'Not Selected';
                        else if (app.status === 'accepted') statusLabel = 'Accepted';
                        else statusLabel = app.status.charAt(0).toUpperCase() + app.status.slice(1);
                      %>
                      <%= statusLabel %>
                    </span>
                    <% if (app.rank) { %>
                      <span class="rank-badge">Rank: <strong>#<%= app.rank %></strong></span>
                    <% } %>
                    <% if (app.status === 'notified') { %>
                      <span class="rank-badge" style="color: #10b981; font-weight: 600;">Congratulations!</span>
                    <% } %>
                  </div>
                </div>
                <div class="card-actions">
                  <% if (app.status === 'draft') { %>
                    <a href="/student/scholarships/<%= app.scholarshipId %>/apply" class="btn btn-edit">Continue Editing</a>
                    <button class="btn btn-delete-draft" onclick="deleteDraft('<%= app.id %>')">Delete Draft</button>
                  <% } else { %>
                    <a href="/student/applications/<%= app.id %>" class="btn btn-view">View Details</a>
                    <% if (['pending', 'under_review'].includes(app.status)) { %>
                      <button class="btn btn-withdraw" onclick="withdrawApplication('<%= app.id %>')">Withdraw</button>
                    <% } %>
                  <% } %>
                </div>
              </div>
            <% }); %>
          </div>
          <%- include('../partials/pagination') %>
        <% } else { %>
          <div class="empty-state">
            <div class="icon"></div>
            <h3>No Applications Yet</h3>
            <p>You haven't applied to any scholarships yet. Start exploring opportunities!</p>
            <a href="/student/scholarships" class="btn btn-primary">Browse Scholarships</a>
          </div>
        <% } %>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </div>

  <script src="/js/sidebar.js"></script>
  <script>
    async function withdrawApplication(applicationId) {
      if (!confirm('Are you sure you want to withdraw this application? This action cannot be undone.')) {
        return;
      }

      try {
        const response = await fetch(`/student/applications/${applicationId}/withdraw`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        const result = await response.json();

        if (result.success) {
          window.location.reload();
        } else {
          alert(result.error || 'Failed to withdraw application');
        }
      } catch (error) {
        alert('An error occurred. Please try again.');
      }
    }

    async function deleteDraft(applicationId) {
      if (!confirm('Are you sure you want to delete this draft? This action cannot be undone.')) {
        return;
      }

      try {
        const response = await fetch(`/student/applications/${applicationId}/draft`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        const result = await response.json();

        if (result.success) {
          window.location.reload();
        } else {
          alert(result.error || 'Failed to delete draft');
        }
      } catch (error) {
        alert('An error occurred. Please try again.');
      }
    }
  </script>
</body>
</html>
