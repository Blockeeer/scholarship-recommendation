<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= scholarship.scholarshipName %> - Scholarship Details</title>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/footer.css">
  <link rel="stylesheet" href="/css/recommendations.css">
  <style>
    .details-container {
      max-width: 900px;
      margin: 2rem auto;
      padding: 0 2rem;
    }

    .details-header {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: var(--shadow);
      margin-bottom: 2rem;
      position: relative;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--primary-color);
      text-decoration: none;
      margin-bottom: 1rem;
      font-weight: 600;
    }

    .details-title {
      font-size: 2rem;
      color: var(--text-dark);
      margin-bottom: 0.5rem;
    }

    .details-org {
      font-size: 1.2rem;
      color: var(--primary-color);
      font-weight: 600;
      margin-bottom: 1rem;
    }

    .details-section {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: var(--shadow);
      margin-bottom: 1.5rem;
    }

    .section-title {
      font-size: 1.3rem;
      color: var(--text-dark);
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid var(--bg-light);
    }

    .info-grid {
      display: grid;
      grid-template-columns: 200px 1fr;
      gap: 1rem;
      margin-bottom: 0.5rem;
    }

    .info-label {
      font-weight: 600;
      color: var(--text-light);
    }

    .info-value {
      color: var(--text-dark);
    }

    .requirements-list {
      list-style: none;
      padding: 0;
    }

    .requirements-list li {
      padding: 0.5rem 0;
      padding-left: 1.5rem;
      position: relative;
    }

    .requirements-list li:before {
      content: "✓";
      position: absolute;
      left: 0;
      color: var(--primary-color);
      font-weight: bold;
    }

    .apply-section {
      background: var(--primary-gradient);
      color: white;
      padding: 2rem;
      border-radius: 12px;
      text-align: center;
    }

    .apply-btn-large {
      display: inline-block;
      padding: 1rem 3rem;
      background: white;
      color: var(--primary-color);
      text-decoration: none;
      border-radius: 8px;
      font-weight: 700;
      font-size: 1.1rem;
      margin-top: 1rem;
      transition: transform 0.2s;
    }

    .apply-btn-large:hover {
      transform: scale(1.05);
    }
  </style>
</head>
<body style="display: flex; flex-direction: column; min-height: 100vh;">
  
  <%- include('../partials/navbar_student') %>

  <main style="flex: 1; background: var(--bg-light);">
    <div class="details-container">
      
      <a href="/student/recommendations" class="back-link">
        ← Back to Recommendations
      </a>

      <!-- Header with Match Score -->
      <div class="details-header">
        <% 
          let matchClass = 'match-low';
          if (scholarship.matchScore >= 80) matchClass = 'match-excellent';
          else if (scholarship.matchScore >= 60) matchClass = 'match-good';
          else if (scholarship.matchScore >= 40) matchClass = 'match-fair';
        %>
        <div class="match-badge <%= matchClass %>" style="position: absolute; top: 2rem; right: 2rem;">
          ⭐ <%= scholarship.matchScore %>% Match
        </div>

        <h1 class="details-title"><%= scholarship.scholarshipName %></h1>
        <p class="details-org"><%= scholarship.organizationName %></p>
        <span class="card-type"><%= scholarship.scholarshipType %> Scholarship</span>

        <% if (scholarship.matchReasons && scholarship.matchReasons.length > 0) { %>
          <div class="match-reasons" style="margin-top: 1rem;">
            <div class="match-reasons-title">Why this matches you:</div>
            <ul>
              <% scholarship.matchReasons.forEach(reason => { %>
                <li><%= reason %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>
      </div>

      <!-- Qualification Criteria -->
      <div class="details-section">
        <h2 class="section-title">Qualification Criteria</h2>
        <div class="info-grid">
          <span class="info-label">Minimum GPA:</span>
          <span class="info-value"><%= scholarship.minGPA %></span>
        </div>
        <div class="info-grid">
          <span class="info-label">Eligible Courses:</span>
          <span class="info-value">
            <% if (scholarship.eligibleCourses && scholarship.eligibleCourses.length > 0) { %>
              <%= scholarship.eligibleCourses.join(', ') %>
            <% } else { %>
              All courses eligible
            <% } %>
          </span>
        </div>
        <div class="info-grid">
          <span class="info-label">Year Levels:</span>
          <span class="info-value">
            <% if (scholarship.eligibleYearLevels && scholarship.eligibleYearLevels.length > 0) { %>
              <%= scholarship.eligibleYearLevels.join(', ') %>
            <% } else { %>
              All year levels
            <% } %>
          </span>
        </div>
        <% if (scholarship.incomeLimit) { %>
          <div class="info-grid">
            <span class="info-label">Income Limit:</span>
            <span class="info-value"><%= scholarship.incomeLimit %></span>
          </div>
        <% } %>
        <% if (scholarship.requiredSkills && scholarship.requiredSkills.length > 0) { %>
          <div class="info-grid">
            <span class="info-label">Required Skills:</span>
            <span class="info-value"><%= scholarship.requiredSkills.join(', ') %></span>
          </div>
        <% } %>
      </div>

      <!-- Requirements -->
      <div class="details-section">
        <h2 class="section-title">Document Requirements</h2>
        <% if (scholarship.requiredDocuments && scholarship.requiredDocuments.length > 0) { %>
          <ul class="requirements-list">
            <% scholarship.requiredDocuments.forEach(doc => { %>
              <li><%= doc %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="info-value">Standard documents required (transcript, enrollment certificate, valid ID)</p>
        <% } %>
      </div>

      <!-- Scholarship Details -->
      <div class="details-section">
        <h2 class="section-title">Scholarship Details</h2>
        <div class="info-grid">
          <span class="info-label">Available Slots:</span>
          <span class="info-value"><%= scholarship.slotsAvailable - scholarship.slotsFilled %> out of <%= scholarship.slotsAvailable %></span>
        </div>
        <div class="info-grid">
          <span class="info-label">Application Period:</span>
          <span class="info-value">
            <%= new Date(scholarship.startDate).toLocaleDateString() %> - 
            <%= new Date(scholarship.endDate).toLocaleDateString() %>
          </span>
        </div>
        <div class="info-grid">
          <span class="info-label">Status:</span>
          <span class="info-value" style="color: #10b981; font-weight: 600;"><%= scholarship.status %></span>
        </div>
      </div>

      <!-- Apply Section -->
      <div class="apply-section">
        <h2 style="margin-bottom: 0.5rem;">Ready to Apply?</h2>
        <p>Submit your application now and increase your chances of getting this scholarship!</p>
        <a href="/student/apply/<%= scholarship.id %>" class="apply-btn-large">
          Apply for this Scholarship
        </a>
      </div>

    </div>
  </main>

  <%- include('../partials/footer') %>

  <script src="/js/navbar.js"></script>
</body>
</html>