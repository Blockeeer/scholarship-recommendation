<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI Recommendations - Scholarship Portal</title>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/topbar.css">
  <link rel="stylesheet" href="/css/footer.css">
  <style>
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    .page-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 2rem;
      border-radius: 12px;
      margin-bottom: 2rem;
      text-align: center;
    }

    .page-header h1 {
      margin: 0 0 0.5rem 0;
      color: white;
    }

    .page-header p {
      margin: 0;
      opacity: 0.95;
      color: white;
    }

    .alert {
      padding: 1rem 1.5rem;
      border-radius: 8px;
      margin-bottom: 2rem;
    }

    .alert-warning {
      background: #fff3cd;
      color: #856404;
      border: 1px solid #ffc107;
    }

    .alert-error {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }

    .alert-info {
      background: #d1ecf1;
      color: #0c5460;
      border: 1px solid #bee5eb;
    }

    .generate-section {
      background: white;
      border-radius: 12px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .generate-section h3 {
      margin: 0 0 0.5rem 0;
      color: var(--text-primary, #1f2937);
    }

    .generate-section p {
      color: var(--text-secondary, #4b5563);
      margin-bottom: 1.5rem;
    }

    .btn-generate {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      padding: 1rem 2rem;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .btn-generate:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    .btn-generate:disabled {
      opacity: 0.7;
      cursor: not-allowed;
      transform: none;
    }

    .btn-generate .spinner {
      width: 20px;
      height: 20px;
      border: 2px solid rgba(255,255,255,0.3);
      border-top-color: white;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      display: none;
    }

    .btn-generate.loading .spinner {
      display: inline-block;
    }

    .btn-generate.loading .btn-text {
      display: none;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .last-generated {
      margin-top: 1rem;
      font-size: 0.875rem;
      color: var(--text-secondary, #4b5563);
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: white;
      padding: 1.5rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .stat-icon {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }

    .stat-value {
      font-size: 2rem;
      font-weight: bold;
      color: #667eea;
    }

    .stat-label {
      color: var(--text-secondary, #4b5563);
      font-size: 0.9rem;
    }

    .recommendations-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 1.5rem;
    }

    .recommendation-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: transform 0.2s, box-shadow 0.2s;
      position: relative;
    }

    .recommendation-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .match-badge {
      position: absolute;
      top: 1rem;
      right: 1rem;
      padding: 0.5rem 1rem;
      border-radius: 20px;
      font-weight: 600;
      font-size: 0.85rem;
    }

    .match-excellent {
      background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
      color: white;
    }

    .match-good {
      background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
      color: white;
    }

    .match-fair {
      background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
      color: white;
    }

    .match-low {
      background: #e0e0e0;
      color: #374151;
    }

    .card-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 1.5rem;
      padding-right: 100px;
    }

    .card-header h3 {
      margin: 0 0 0.5rem 0;
      font-size: 1.2rem;
      color: white;
    }

    .card-header p {
      margin: 0;
      opacity: 0.95;
      font-size: 0.9rem;
      color: white;
    }

    .recommendation-badge {
      display: inline-block;
      margin-top: 0.5rem;
      padding: 0.25rem 0.75rem;
      background: rgba(255,255,255,0.2);
      border-radius: 15px;
      font-size: 0.8rem;
    }

    .card-body {
      padding: 1.5rem;
    }

    .match-details {
      margin-bottom: 1rem;
    }

    .match-details h4 {
      margin: 0 0 0.5rem 0;
      color: var(--text-primary, #1f2937);
      font-size: 0.9rem;
    }

    .match-criteria {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .criteria-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-size: 0.8rem;
    }

    .criteria-match {
      background: #d4edda;
      color: #155724;
    }

    .criteria-no-match {
      background: #f8d7da;
      color: #721c24;
    }

    .explanation {
      background: #f8f9fa;
      padding: 0.75rem;
      border-radius: 6px;
      font-size: 0.9rem;
      color: var(--text-secondary, #4b5563);
      margin-bottom: 1rem;
      border-left: 3px solid #667eea;
    }

    .why-matched {
      margin-bottom: 1rem;
    }

    .why-matched-toggle {
      background: none;
      border: none;
      color: #667eea;
      cursor: pointer;
      font-size: 0.85rem;
      padding: 0;
      display: flex;
      align-items: center;
      gap: 0.25rem;
    }

    .why-matched-toggle:hover {
      text-decoration: underline;
    }

    .why-matched-list {
      display: none;
      margin-top: 0.5rem;
      padding: 0.75rem;
      background: #f0f4ff;
      border-radius: 6px;
    }

    .why-matched-list.show {
      display: block;
    }

    .why-reason {
      display: flex;
      align-items: flex-start;
      gap: 0.5rem;
      margin-bottom: 0.5rem;
      font-size: 0.85rem;
    }

    .why-reason:last-child {
      margin-bottom: 0;
    }

    .why-reason-icon {
      flex-shrink: 0;
      width: 18px;
      height: 18px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 10px;
    }

    .why-reason.positive .why-reason-icon {
      background: #d4edda;
      color: #155724;
    }

    .why-reason.negative .why-reason-icon {
      background: #f8d7da;
      color: #721c24;
    }

    .recommendation-source {
      font-size: 0.75rem;
      color: var(--text-secondary);
      margin-top: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.25rem;
    }

    .source-ai {
      color: #667eea;
    }

    .source-fallback {
      color: #6b7280;
    }

    .card-details {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
      margin-bottom: 1rem;
    }

    .detail-item {
      display: flex;
      flex-direction: column;
    }

    .detail-label {
      font-size: 0.8rem;
      color: var(--text-secondary, #4b5563);
    }

    .detail-value {
      font-weight: 600;
      color: var(--text-primary, #1f2937);
    }

    .card-actions {
      display: flex;
      gap: 0.5rem;
      padding-top: 1rem;
      border-top: 1px solid #e0e0e0;
    }

    .btn {
      flex: 1;
      padding: 0.75rem;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 600;
      text-decoration: none;
      text-align: center;
      transition: transform 0.2s;
    }

    .btn:hover {
      transform: translateY(-2px);
    }

    .btn-view {
      background: #667eea;
      color: white;
    }

    .btn-apply {
      background: #27ae60;
      color: white;
    }

    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .empty-state .icon {
      font-size: 4rem;
      margin-bottom: 1rem;
      opacity: 0.5;
    }

    .empty-state h3 {
      color: var(--text-primary, #1f2937);
      margin-bottom: 0.5rem;
    }

    .empty-state p {
      color: var(--text-secondary, #4b5563);
      margin-bottom: 1.5rem;
    }

    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 0.75rem 1.5rem;
      display: inline-block;
    }

    .scholarship-unavailable {
      opacity: 0.6;
      position: relative;
    }

    .scholarship-unavailable::after {
      content: "No longer available";
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: rgba(0,0,0,0.8);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 4px;
      font-size: 0.875rem;
    }
  </style>
</head>
<body>
  <%- include('../partials/sidebar_student') %>

  <div class="main-wrapper">
    <%- include('../partials/topbar', { pageTitle: 'AI Recommendations' }) %>

    <main class="page-content">
      <div class="container">
        <div class="page-header">
          <h1>AI-Powered Scholarship Recommendations</h1>
          <p>Personalized matches based on your profile and assessment using GPT</p>
        </div>

        <% if (!hasAssessment) { %>
          <div class="alert alert-warning">
            <strong>Complete Your Assessment First!</strong>
            To get personalized scholarship recommendations, please complete your profile assessment.
            <a href="/student/assessment" style="color: inherit; font-weight: bold; display: block; margin-top: 0.5rem;">Complete Assessment ‚Üí</a>
          </div>
        <% } else { %>
          <!-- Generate Recommendations Section -->
          <div class="generate-section">
            <h3>Generate AI Recommendations</h3>
            <p>Click the button below to generate personalized scholarship recommendations based on your profile. Your recommendations will be saved until you generate new ones.</p>
            <button class="btn-generate" id="generateBtn" onclick="generateRecommendations()">
              <span class="spinner"></span>
              <span class="btn-text">Generate Recommendations with AI</span>
              <span class="loading-text" style="display: none;">Analyzing your profile...</span>
            </button>
            <% if (lastGenerated) { %>
              <div class="last-generated">
                Last generated: <%= new Date(lastGenerated).toLocaleString() %>
              </div>
            <% } %>
          </div>

          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error">
              <strong>Notice:</strong> <%= error %>
            </div>
          <% } %>

          <% if (recommendations && recommendations.length > 0) { %>
            <%
              const excellent = recommendations.filter(r => r.matchScore >= 80);
              const good = recommendations.filter(r => r.matchScore >= 60 && r.matchScore < 80);
              const fair = recommendations.filter(r => r.matchScore >= 40 && r.matchScore < 60);
            %>

            <div class="stats-grid">
              <div class="stat-card">
                <div class="stat-icon">üéØ</div>
                <div class="stat-value"><%= excellent.length %></div>
                <div class="stat-label">Excellent Matches (80%+)</div>
              </div>
              <div class="stat-card">
                <div class="stat-icon">üëç</div>
                <div class="stat-value"><%= good.length %></div>
                <div class="stat-label">Good Matches (60-79%)</div>
              </div>
              <div class="stat-card">
                <div class="stat-icon">üìä</div>
                <div class="stat-value"><%= fair.length %></div>
                <div class="stat-label">Fair Matches (40-59%)</div>
              </div>
              <div class="stat-card">
                <div class="stat-icon">üîç</div>
                <div class="stat-value"><%= recommendations.length %></div>
                <div class="stat-label">Total Recommendations</div>
              </div>
            </div>

            <div class="recommendations-grid">
              <% recommendations.forEach(rec => {
                let matchClass = 'match-low';
                if (rec.matchScore >= 80) matchClass = 'match-excellent';
                else if (rec.matchScore >= 60) matchClass = 'match-good';
                else if (rec.matchScore >= 40) matchClass = 'match-fair';

                const isAvailable = rec.scholarship && rec.scholarship.status === 'Open';
              %>
                <div class="recommendation-card <%= !isAvailable ? 'scholarship-unavailable' : '' %>">
                  <div class="match-badge <%= matchClass %>">
                    <%= rec.matchScore %>% Match
                  </div>

                  <div class="card-header">
                    <h3><%= rec.scholarship ? rec.scholarship.scholarshipName : rec.scholarshipName %></h3>
                    <p><%= rec.scholarship ? rec.scholarship.organizationName : rec.organizationName || '' %></p>
                    <span class="recommendation-badge"><%= rec.recommendation %></span>
                  </div>

                  <div class="card-body">
                    <% if (rec.matchDetails) { %>
                      <div class="match-details">
                        <h4>Eligibility Match:</h4>
                        <div class="match-criteria">
                          <span class="criteria-badge <%= rec.matchDetails.gpaMatch ? 'criteria-match' : 'criteria-no-match' %>">
                            <%= rec.matchDetails.gpaMatch ? '‚úì' : '‚úó' %> GPA
                          </span>
                          <span class="criteria-badge <%= rec.matchDetails.courseMatch ? 'criteria-match' : 'criteria-no-match' %>">
                            <%= rec.matchDetails.courseMatch ? '‚úì' : '‚úó' %> Course
                          </span>
                          <span class="criteria-badge <%= rec.matchDetails.yearLevelMatch ? 'criteria-match' : 'criteria-no-match' %>">
                            <%= rec.matchDetails.yearLevelMatch ? '‚úì' : '‚úó' %> Year Level
                          </span>
                          <% if (rec.matchDetails.incomeMatch !== undefined) { %>
                            <span class="criteria-badge <%= rec.matchDetails.incomeMatch ? 'criteria-match' : 'criteria-no-match' %>">
                              <%= rec.matchDetails.incomeMatch ? '‚úì' : '‚úó' %> Income
                            </span>
                          <% } %>
                        </div>
                      </div>
                    <% } %>

                    <% if (rec.explanation) { %>
                      <div class="explanation">
                        <%= rec.explanation %>
                      </div>
                    <% } %>

                    <% if (rec.whyMatched && rec.whyMatched.length > 0) { %>
                      <div class="why-matched">
                        <button class="why-matched-toggle" onclick="toggleWhyMatched(this)">
                          <span>Why this match?</span>
                          <span class="toggle-icon">‚ñº</span>
                        </button>
                        <div class="why-matched-list">
                          <% rec.whyMatched.forEach(reason => { %>
                            <div class="why-reason <%= reason.type %>">
                              <span class="why-reason-icon"><%= reason.type === 'positive' ? '‚úì' : '‚úó' %></span>
                              <span><%= reason.text %></span>
                            </div>
                          <% }); %>
                        </div>
                      </div>
                    <% } %>

                    <% if (rec.source) { %>
                      <div class="recommendation-source <%= rec.source === 'ai' ? 'source-ai' : 'source-fallback' %>">
                        <span><%= rec.source === 'ai' ? 'ü§ñ AI-Powered Analysis' : 'üìä Algorithm Analysis' %></span>
                      </div>
                    <% } %>

                    <% if (rec.scholarship) { %>
                      <div class="card-details">
                        <div class="detail-item">
                          <span class="detail-label">Type</span>
                          <span class="detail-value"><%= rec.scholarship.scholarshipType %></span>
                        </div>
                        <div class="detail-item">
                          <span class="detail-label">Min GPA</span>
                          <span class="detail-value"><%= rec.scholarship.minGPA %></span>
                        </div>
                        <div class="detail-item">
                          <span class="detail-label">Available Slots</span>
                          <span class="detail-value"><%= rec.scholarship.slotsAvailable - (rec.scholarship.slotsFilled || 0) %></span>
                        </div>
                        <div class="detail-item">
                          <span class="detail-label">Deadline</span>
                          <span class="detail-value"><%= new Date(rec.scholarship.endDate).toLocaleDateString() %></span>
                        </div>
                      </div>

                      <% if (isAvailable) { %>
                        <div class="card-actions">
                          <a href="/student/scholarships/<%= rec.scholarshipId %>" class="btn btn-view">View Details</a>
                          <% if (rec.hasApplied) { %>
                            <span class="btn btn-applied" style="background: #6b7280; cursor: default;">Applied</span>
                          <% } else { %>
                            <a href="/student/scholarships/<%= rec.scholarshipId %>/apply" class="btn btn-apply">Apply Now</a>
                          <% } %>
                        </div>
                      <% } %>
                    <% } %>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } else { %>
            <div class="empty-state">
              <div class="icon">üîç</div>
              <h3>No Recommendations Yet</h3>
              <p>Click the "Generate Recommendations" button above to get personalized scholarship matches based on your profile!</p>
              <a href="/student/scholarships" class="btn btn-primary">Browse All Scholarships</a>
            </div>
          <% } %>
        <% } %>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </div>

  <script src="/js/sidebar.js"></script>
  <script>
    function toggleWhyMatched(button) {
      const list = button.nextElementSibling;
      const icon = button.querySelector('.toggle-icon');
      list.classList.toggle('show');
      icon.textContent = list.classList.contains('show') ? '‚ñ≤' : '‚ñº';
    }

    async function generateRecommendations() {
      const btn = document.getElementById('generateBtn');

      if (!confirm('Generate new AI recommendations? This will replace your current saved recommendations.')) {
        return;
      }

      // Show loading state
      btn.classList.add('loading');
      btn.disabled = true;
      btn.querySelector('.btn-text').style.display = 'none';
      btn.querySelector('.loading-text').style.display = 'inline';

      try {
        const response = await fetch('/student/recommendations/generate', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        const result = await response.json();

        if (result.success) {
          // Reload the page to show new recommendations
          window.location.reload();
        } else {
          alert(result.error || 'Failed to generate recommendations. Please try again.');
          // Reset button
          btn.classList.remove('loading');
          btn.disabled = false;
          btn.querySelector('.btn-text').style.display = 'inline';
          btn.querySelector('.loading-text').style.display = 'none';
        }
      } catch (error) {
        console.error('Error:', error);
        alert('An error occurred. Please try again.');
        // Reset button
        btn.classList.remove('loading');
        btn.disabled = false;
        btn.querySelector('.btn-text').style.display = 'inline';
        btn.querySelector('.loading-text').style.display = 'none';
      }
    }
  </script>
</body>
</html>
