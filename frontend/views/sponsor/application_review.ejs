<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Application Details - Sponsor</title>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/topbar.css">
  <link rel="stylesheet" href="/css/dashboard.css">
  <link rel="stylesheet" href="/css/footer.css">
  <style>
    .application-card {
      background: var(--card-bg, white);
      border-radius: 12px;
      padding: 2rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      margin-bottom: 1.5rem;
    }
    .application-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1.5rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid var(--border-color, #e0e0e0);
    }
    .applicant-info h2 {
      margin: 0 0 0.5rem 0;
      font-size: 1.5rem;
    }
    .applicant-email {
      color: var(--text-secondary, #666);
    }
    .status-badge {
      display: inline-block;
      padding: 0.5rem 1rem;
      border-radius: 999px;
      font-size: 0.875rem;
      font-weight: 600;
    }
    .status-pending { background: #fef3c7; color: #92400e; }
    .status-under_review { background: #dbeafe; color: #1e40af; }
    .status-approved { background: #d1fae5; color: #065f46; }
    .status-rejected { background: #fee2e2; color: #991b1b; }
    .detail-section {
      margin-bottom: 2rem;
    }
    .detail-section h3 {
      font-size: 1.125rem;
      margin-bottom: 1rem;
      color: var(--text-primary, #333);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .detail-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }
    .detail-item {
      background: var(--bg-secondary, #f8f9fa);
      padding: 1rem;
      border-radius: 8px;
    }
    .detail-label {
      font-size: 0.875rem;
      color: var(--text-secondary, #666);
      margin-bottom: 0.25rem;
    }
    .detail-value {
      font-size: 1rem;
      font-weight: 500;
      color: var(--text-primary, #333);
    }
    .documents-section {
      background: var(--bg-secondary, #f8f9fa);
      padding: 1.5rem;
      border-radius: 8px;
    }
    .document-list {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .document-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      background: var(--card-bg, white);
      border-radius: 8px;
      text-decoration: none;
      color: var(--text-primary, #333);
      transition: all 0.2s;
    }
    .document-item:hover {
      background: var(--primary-color, #4f46e5);
      color: white;
    }
    .document-icon {
      font-size: 1.25rem;
    }
    .document-name {
      flex: 1;
    }
    .essay-section {
      background: var(--bg-secondary, #f8f9fa);
      padding: 1.5rem;
      border-radius: 8px;
    }
    .essay-content {
      white-space: pre-wrap;
      line-height: 1.6;
    }
    .action-buttons {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid var(--border-color, #e0e0e0);
    }
    .btn-action {
      flex: 1;
      padding: 1rem 2rem;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }
    .btn-approve {
      background: #10b981;
      color: white;
    }
    .btn-approve:hover {
      background: #059669;
    }
    .btn-reject {
      background: #ef4444;
      color: white;
    }
    .btn-reject:hover {
      background: #dc2626;
    }
    .btn-back {
      background: var(--bg-secondary, #f8f9fa);
      color: var(--text-primary, #333);
    }
    .btn-back:hover {
      background: var(--border-color, #e0e0e0);
    }
    .scholarship-info {
      background: linear-gradient(135deg, var(--primary-color, #4f46e5), #7c3aed);
      color: white;
      padding: 1.5rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
    }
    .scholarship-info h3 {
      margin: 0 0 0.5rem 0;
      color: white;
    }
    .scholarship-info p {
      margin: 0;
      opacity: 0.9;
    }
    .ai-ranking {
      background: linear-gradient(135deg, #f59e0b, #d97706);
      color: white;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    .ai-score {
      font-size: 2rem;
      font-weight: 700;
    }
    .ai-label {
      font-size: 0.875rem;
      opacity: 0.9;
    }
    .no-documents {
      color: var(--text-secondary, #666);
      font-style: italic;
    }
  </style>
</head>
<body>
  <%- include('../partials/sidebar_sponsor') %>

  <div class="main-wrapper">
    <%- include('../partials/topbar', { pageTitle: 'Application Review' }) %>

    <main class="page-content">
      <div class="container">
        <div class="dashboard-wrapper">
          <% if (scholarship) { %>
            <div class="scholarship-info">
              <h3><%= scholarship.scholarshipName %></h3>
              <p><%= scholarship.organizationName %></p>
            </div>
          <% } %>

          <% if (application.aiScore) { %>
            <div class="ai-ranking">
              <div>
                <div class="ai-score"><%= application.aiScore %>%</div>
                <div class="ai-label">AI Match Score</div>
              </div>
              <div style="flex: 1;">
                <strong>AI Analysis:</strong>
                <p style="margin: 0.5rem 0 0 0; font-size: 0.875rem;"><%= application.aiReason || 'Based on qualifications and requirements match.' %></p>
              </div>
            </div>
          <% } %>

          <div class="application-card">
            <div class="application-header">
              <div class="applicant-info">
                <h2><%= application.studentName || 'Applicant' %></h2>
                <div class="applicant-email"><%= application.studentEmail || 'No email provided' %></div>
              </div>
              <span class="status-badge status-<%= application.status %>">
                <%= application.status === 'under_review' ? 'Under Review' : application.status.charAt(0).toUpperCase() + application.status.slice(1) %>
              </span>
            </div>

            <!-- Student Information -->
            <div class="detail-section">
              <h3><span><“</span> Student Information</h3>
              <div class="detail-grid">
                <div class="detail-item">
                  <div class="detail-label">Full Name</div>
                  <div class="detail-value"><%= application.studentName || 'N/A' %></div>
                </div>
                <div class="detail-item">
                  <div class="detail-label">Email</div>
                  <div class="detail-value"><%= application.studentEmail || 'N/A' %></div>
                </div>
                <div class="detail-item">
                  <div class="detail-label">Course</div>
                  <div class="detail-value"><%= application.course || 'N/A' %></div>
                </div>
                <div class="detail-item">
                  <div class="detail-label">Year Level</div>
                  <div class="detail-value"><%= application.yearLevel || 'N/A' %></div>
                </div>
                <div class="detail-item">
                  <div class="detail-label">GPA</div>
                  <div class="detail-value"><%= application.gpa || 'N/A' %></div>
                </div>
                <div class="detail-item">
                  <div class="detail-label">Applied On</div>
                  <div class="detail-value"><%= new Date(application.createdAt).toLocaleDateString() %></div>
                </div>
              </div>
            </div>

            <!-- Documents -->
            <div class="detail-section">
              <h3><span>=Ä</span> Submitted Documents</h3>
              <div class="documents-section">
                <%
                  const docs = application.documents || {};
                  const hasDocuments = Object.keys(docs).some(key => docs[key]);
                %>
                <% if (hasDocuments) { %>
                  <div class="document-list">
                    <% if (docs.grades) { %>
                      <a href="<%= docs.grades %>" target="_blank" class="document-item">
                        <span class="document-icon">=Ê</span>
                        <span class="document-name">Grade Records</span>
                        <span>View</span>
                      </a>
                    <% } %>
                    <% if (docs.coe) { %>
                      <a href="<%= docs.coe %>" target="_blank" class="document-item">
                        <span class="document-icon">=Ü</span>
                        <span class="document-name">Certificate of Enrollment</span>
                        <span>View</span>
                      </a>
                    <% } %>
                    <% if (docs.schoolId) { %>
                      <a href="<%= docs.schoolId %>" target="_blank" class="document-item">
                        <span class="document-icon">>ª</span>
                        <span class="document-name">School ID</span>
                        <span>View</span>
                      </a>
                    <% } %>
                    <% if (docs.incomeCertificate) { %>
                      <a href="<%= docs.incomeCertificate %>" target="_blank" class="document-item">
                        <span class="document-icon">=°</span>
                        <span class="document-name">Income Certificate</span>
                        <span>View</span>
                      </a>
                    <% } %>
                    <% if (docs.recommendation) { %>
                      <a href="<%= docs.recommendation %>" target="_blank" class="document-item">
                        <span class="document-icon">	</span>
                        <span class="document-name">Recommendation Letter</span>
                        <span>View</span>
                      </a>
                    <% } %>
                    <% if (docs.otherDocuments && Array.isArray(docs.otherDocuments)) { %>
                      <% docs.otherDocuments.forEach(function(docUrl, index) { %>
                        <a href="<%= docUrl %>" target="_blank" class="document-item">
                          <span class="document-icon">=Î</span>
                          <span class="document-name">Additional Document <%= index + 1 %></span>
                          <span>View</span>
                        </a>
                      <% }); %>
                    <% } %>
                  </div>
                <% } else { %>
                  <p class="no-documents">No documents have been submitted yet.</p>
                <% } %>
              </div>
            </div>

            <!-- Essay/Statement -->
            <% if (application.essay) { %>
              <div class="detail-section">
                <h3><span>=Ý</span> Personal Statement / Essay</h3>
                <div class="essay-section">
                  <div class="essay-content"><%= application.essay %></div>
                </div>
              </div>
            <% } %>

            <!-- Action Buttons -->
            <% if (application.status === 'pending' || application.status === 'under_review') { %>
              <div class="action-buttons">
                <button class="btn-action btn-back" onclick="history.back()">Back to List</button>
                <button class="btn-action btn-reject" onclick="updateStatus('rejected')">Reject Application</button>
                <button class="btn-action btn-approve" onclick="updateStatus('approved')">Approve Application</button>
              </div>
            <% } else { %>
              <div class="action-buttons">
                <button class="btn-action btn-back" onclick="history.back()">Back to List</button>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </div>

  <script src="/js/sidebar.js"></script>
  <script>
    function updateStatus(status) {
      const action = status === 'approved' ? 'approve' : 'reject';
      if (!confirm('Are you sure you want to ' + action + ' this application?')) return;

      fetch('/sponsor/applications/<%= application.id %>/status', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ status: status })
      })
        .then(function(res) { return res.json(); })
        .then(function(data) {
          if (data.success) {
            alert('Application ' + status + ' successfully!');
            location.reload();
          } else {
            alert('Error: ' + (data.error || 'Failed to update application'));
          }
        })
        .catch(function(err) {
          alert('Error updating application status');
        });
    }
  </script>
</body>
</html>
