<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= scholarship.scholarshipName %> - Details</title>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/topbar.css">
  <link rel="stylesheet" href="/css/footer.css">
  <style>
    .details-container {
      max-width: 1000px;
      margin: 0 auto;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--primary-color);
      text-decoration: none;
      margin-bottom: 1.5rem;
      font-weight: 500;
      transition: all var(--transition);
    }

    .back-link:hover {
      color: var(--primary-hover);
    }

    .scholarship-header {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      padding: 2rem;
      margin-bottom: 1.5rem;
      box-shadow: var(--shadow);
    }

    .scholarship-header h1 {
      color: var(--text-primary);
      margin: 0 0 0.5rem 0;
      font-size: 1.75rem;
    }

    .subtitle {
      color: var(--primary-color);
      font-size: 1.125rem;
      margin: 0;
    }

    .status-badge {
      display: inline-flex;
      align-items: center;
      padding: 0.375rem 1rem;
      border-radius: var(--radius-full);
      font-weight: 600;
      font-size: 0.875rem;
      margin-top: 1rem;
    }

    .status-open { background: #dcfce7; color: #166534; }
    .status-closed { background: #fee2e2; color: #991b1b; }
    .status-pending { background: #fef3c7; color: #92400e; }
    .status-pending\ reopen { background: #e0e7ff; color: #4338ca; }

    .content-grid {
      display: grid;
      grid-template-columns: 1fr 350px;
      gap: 1.5rem;
    }

    @media (max-width: 900px) {
      .content-grid {
        grid-template-columns: 1fr;
      }
    }

    .main-content {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .section-card {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      box-shadow: var(--shadow);
      overflow: hidden;
    }

    .section-header {
      background: var(--bg-secondary);
      padding: 1rem 1.5rem;
      border-bottom: 1px solid var(--border-color);
    }

    .section-header h2 {
      margin: 0;
      font-size: 1.125rem;
      color: var(--text-primary);
    }

    .section-body {
      padding: 1.5rem;
    }

    .detail-grid {
      display: grid;
      grid-template-columns: 160px 1fr;
      gap: 1rem;
    }

    .detail-label {
      font-weight: 500;
      color: var(--text-secondary);
      font-size: 0.9375rem;
    }

    .detail-value {
      color: var(--text-primary);
      font-size: 0.9375rem;
    }

    /* Sidebar */
    .sidebar-content {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .action-card {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      box-shadow: var(--shadow);
      padding: 1.5rem;
    }

    .action-card h3 {
      margin: 0 0 1rem 0;
      font-size: 1rem;
      color: var(--text-primary);
    }

    .action-buttons {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .btn {
      padding: 0.75rem 1rem;
      border: none;
      border-radius: var(--radius);
      cursor: pointer;
      font-weight: 500;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      transition: all var(--transition);
      font-size: 0.9375rem;
    }

    .btn-primary { background: var(--primary-color); color: white; }
    .btn-primary:hover { background: var(--primary-hover); }
    .btn-success { background: var(--success-500); color: white; }
    .btn-success:hover { background: var(--success-600); }
    .btn-warning { background: var(--warning-500); color: white; }
    .btn-warning:hover { background: var(--warning-600); }
    .btn-danger { background: var(--danger-500); color: white; }
    .btn-danger:hover { background: var(--danger-600); }
    .btn-secondary { background: var(--bg-tertiary); color: var(--text-primary); border: 1px solid var(--border-color); }
    .btn-secondary:hover { background: var(--gray-200); }

    /* Exam Schedule Card */
    .exam-card {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      box-shadow: var(--shadow);
      overflow: hidden;
    }

    .exam-header {
      background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-700) 100%);
      color: white;
      padding: 1rem 1.5rem;
    }

    .exam-header h3 {
      margin: 0;
      font-size: 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .exam-body {
      padding: 1.5rem;
    }

    .exam-info {
      margin-bottom: 1rem;
    }

    .exam-info-item {
      display: flex;
      align-items: flex-start;
      gap: 0.75rem;
      padding: 0.75rem 0;
      border-bottom: 1px solid var(--border-color);
    }

    .exam-info-item:last-child {
      border-bottom: none;
    }

    .exam-info-icon {
      font-size: 1.25rem;
      flex-shrink: 0;
    }

    .exam-info-content {
      flex: 1;
    }

    .exam-info-label {
      font-size: 0.8125rem;
      color: var(--text-muted);
      margin-bottom: 0.25rem;
    }

    .exam-info-value {
      font-weight: 500;
      color: var(--text-primary);
    }

    .no-exam {
      text-align: center;
      padding: 1.5rem;
      color: var(--text-secondary);
    }

    .no-exam p {
      margin: 0 0 1rem 0;
    }

    /* Form styles */
    .form-group {
      margin-bottom: 1rem;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: var(--text-primary);
      font-size: 0.875rem;
    }

    .form-group input,
    .form-group textarea {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 1px solid var(--border-color);
      border-radius: var(--radius);
      font-size: 0.9375rem;
      transition: all var(--transition);
    }

    .form-group input:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px var(--primary-100);
    }

    .form-group textarea {
      min-height: 80px;
      resize: vertical;
    }

    /* Modal */
    .modal-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      padding: 1rem;
    }

    .modal-overlay.show {
      display: flex;
    }

    .modal {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      max-width: 500px;
      width: 100%;
      max-height: 90vh;
      overflow-y: auto;
    }

    .modal-header {
      padding: 1.25rem 1.5rem;
      border-bottom: 1px solid var(--border-color);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .modal-header h3 {
      margin: 0;
      font-size: 1.125rem;
    }

    .modal-close {
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: var(--text-muted);
      line-height: 1;
    }

    .modal-body {
      padding: 1.5rem;
    }

    .modal-footer {
      padding: 1rem 1.5rem;
      border-top: 1px solid var(--border-color);
      display: flex;
      gap: 0.75rem;
      justify-content: flex-end;
    }

    /* Toast */
    .toast {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      background: var(--success-500);
      color: white;
      padding: 1rem 1.5rem;
      border-radius: var(--radius);
      box-shadow: var(--shadow-lg);
      display: flex;
      align-items: center;
      gap: 0.75rem;
      transform: translateY(100px);
      opacity: 0;
      transition: all 0.3s ease;
      z-index: 1001;
    }

    .toast.show {
      transform: translateY(0);
      opacity: 1;
    }
  </style>
</head>
<body>
  <%- include('../partials/sidebar_sponsor') %>

  <div class="main-wrapper">
    <%- include('../partials/topbar', { pageTitle: 'Scholarship Details' }) %>

    <main class="page-content">
      <div class="details-container">
        <a href="/sponsor/offers" class="back-link">‚Üê Back to My Offers</a>

        <div class="scholarship-header">
          <h1><%= scholarship.scholarshipName %></h1>
          <p class="subtitle"><%= scholarship.organizationName %></p>
          <span class="status-badge status-<%= scholarship.status.toLowerCase() %>">
            <%= scholarship.status %>
          </span>
        </div>

        <div class="content-grid">
          <div class="main-content">
            <!-- Scholarship Information -->
            <div class="section-card">
              <div class="section-header">
                <h2>Scholarship Information</h2>
              </div>
              <div class="section-body">
                <div class="detail-grid">
                  <span class="detail-label">Type:</span>
                  <span class="detail-value"><%= scholarship.scholarshipType || 'Not specified' %></span>

                  <span class="detail-label">Status:</span>
                  <span class="detail-value"><%= scholarship.status %></span>
                </div>
              </div>
            </div>

            <!-- Qualification Criteria -->
            <div class="section-card">
              <div class="section-header">
                <h2>Qualification Criteria</h2>
              </div>
              <div class="section-body">
                <div class="detail-grid">
                  <span class="detail-label">Minimum GPA:</span>
                  <span class="detail-value"><%= scholarship.minGPA %></span>

                  <span class="detail-label">Eligible Courses:</span>
                  <span class="detail-value">
                    <% if (scholarship.eligibleCourses && scholarship.eligibleCourses.length > 0) { %>
                      <%= scholarship.eligibleCourses.join(', ') %>
                    <% } else { %>
                      All courses
                    <% } %>
                  </span>

                  <span class="detail-label">Year Levels:</span>
                  <span class="detail-value">
                    <% if (scholarship.eligibleYearLevels && scholarship.eligibleYearLevels.length > 0) { %>
                      <%= scholarship.eligibleYearLevels.join(', ') %>
                    <% } else { %>
                      All year levels
                    <% } %>
                  </span>

                  <span class="detail-label">Income Limit:</span>
                  <span class="detail-value"><%= scholarship.incomeLimit || 'Not applicable' %></span>

                  <span class="detail-label">Required Skills:</span>
                  <span class="detail-value">
                    <% if (scholarship.requiredSkills && scholarship.requiredSkills.length > 0) { %>
                      <%= scholarship.requiredSkills.join(', ') %>
                    <% } else { %>
                      None specified
                    <% } %>
                  </span>
                </div>
              </div>
            </div>

            <!-- Capacity & Duration -->
            <div class="section-card">
              <div class="section-header">
                <h2>Capacity & Duration</h2>
              </div>
              <div class="section-body">
                <div class="detail-grid">
                  <span class="detail-label">Total Slots:</span>
                  <span class="detail-value"><%= scholarship.slotsAvailable %></span>

                  <span class="detail-label">Filled Slots:</span>
                  <span class="detail-value"><%= scholarship.slotsFilled || 0 %></span>

                  <span class="detail-label">Available Slots:</span>
                  <span class="detail-value"><%= scholarship.slotsAvailable - (scholarship.slotsFilled || 0) %></span>

                  <span class="detail-label">Start Date:</span>
                  <span class="detail-value"><%= new Date(scholarship.startDate).toLocaleDateString() %></span>

                  <span class="detail-label">End Date:</span>
                  <span class="detail-value"><%= new Date(scholarship.endDate).toLocaleDateString() %></span>
                </div>
              </div>
            </div>
          </div>

          <div class="sidebar-content">
            <!-- Actions -->
            <div class="action-card">
              <h3>Actions</h3>
              <div class="action-buttons">
                <a href="/sponsor/offers/<%= scholarship.id %>/applications" class="btn btn-success">
                  View Applications
                </a>

                <button class="btn btn-warning" style="width: 100%;" onclick="openAnnouncementModal()">
                  Announcements
                </button>

                <a href="/sponsor/offers/<%= scholarship.id %>/report" class="btn btn-info" style="width: 100%;">
                  Grantees Report
                </a>

                <% if (scholarship.status === 'Pending Reopen') { %>
                  <button class="btn btn-secondary" style="width: 100%; cursor: not-allowed;" disabled>
                    Pending Admin Approval
                  </button>
                <% } else { %>
                  <form action="/sponsor/offers/<%= scholarship.id %>/status" method="POST" style="margin: 0;">
                    <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                    <input type="hidden" name="status" value="<%= scholarship.status === 'Open' ? 'Closed' : 'Open' %>">
                    <button type="submit" class="btn btn-primary" style="width: 100%;">
                      <%= scholarship.status === 'Open' ? 'Close Scholarship' : 'Request to Reopen' %>
                    </button>
                  </form>
                <% } %>

                <a href="/sponsor/offers/<%= scholarship.id %>/edit" class="btn btn-secondary">
                  Edit Details
                </a>

                <form action="/sponsor/offers/<%= scholarship.id %>/delete" method="POST" style="margin: 0;" onsubmit="return confirm('Are you sure you want to delete this scholarship? This action cannot be undone.')">
                  <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                  <button type="submit" class="btn btn-danger" style="width: 100%;">
                    Delete Scholarship
                  </button>
                </form>
              </div>
            </div>

            <!-- Exam Schedule -->
            <div class="exam-card">
              <div class="exam-header">
                <h3>Exam Schedule</h3>
              </div>
              <div class="exam-body">
                <% if (scholarship.examSchedule) { %>
                  <div class="exam-info">
                    <div class="exam-info-item">
                      <span class="exam-info-icon"></span>
                      <div class="exam-info-content">
                        <div class="exam-info-label">Date</div>
                        <div class="exam-info-value"><%= new Date(scholarship.examSchedule.date).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></div>
                      </div>
                    </div>
                    <div class="exam-info-item">
                      <span class="exam-info-icon"></span>
                      <div class="exam-info-content">
                        <div class="exam-info-label">Time</div>
                        <div class="exam-info-value"><%= scholarship.examSchedule.time %></div>
                      </div>
                    </div>
                    <div class="exam-info-item">
                      <span class="exam-info-icon"></span>
                      <div class="exam-info-content">
                        <div class="exam-info-label">Venue</div>
                        <div class="exam-info-value"><%= scholarship.examSchedule.venue %></div>
                      </div>
                    </div>
                    <% if (scholarship.examSchedule.notes) { %>
                      <div class="exam-info-item">
                        <span class="exam-info-icon"></span>
                        <div class="exam-info-content">
                          <div class="exam-info-label">Additional Notes</div>
                          <div class="exam-info-value"><%= scholarship.examSchedule.notes %></div>
                        </div>
                      </div>
                    <% } %>
                  </div>
                  <button class="btn btn-primary" style="width: 100%;" onclick="openExamModal(true)">
                    Update Schedule
                  </button>
                <% } else { %>
                  <div class="no-exam">
                    <p>No exam schedule set yet.</p>
                    <button class="btn btn-primary" onclick="openExamModal(false)">
                      Set Exam Schedule
                    </button>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </div>

  <!-- Exam Schedule Modal -->
  <div class="modal-overlay" id="examModal">
    <div class="modal">
      <div class="modal-header">
        <h3 id="examModalTitle">Set Exam Schedule</h3>
        <button class="modal-close" onclick="closeExamModal()">&times;</button>
      </div>
      <form id="examForm">
        <div class="modal-body">
          <div class="form-group">
            <label for="examDate">Exam Date *</label>
            <input type="date" id="examDate" name="examDate" required
              value="<%= scholarship.examSchedule ? scholarship.examSchedule.date : '' %>">
          </div>
          <div class="form-group">
            <label for="examTime">Exam Time *</label>
            <input type="time" id="examTime" name="examTime" required
              value="<%= scholarship.examSchedule ? scholarship.examSchedule.time : '' %>">
          </div>
          <div class="form-group">
            <label for="examVenue">Venue / Address *</label>
            <textarea id="examVenue" name="examVenue" placeholder="Enter the exam venue address..." required><%= scholarship.examSchedule ? scholarship.examSchedule.venue : '' %></textarea>
          </div>
          <div class="form-group">
            <label for="examNotes">Additional Notes (Optional)</label>
            <textarea id="examNotes" name="examNotes" placeholder="Any additional instructions for students..."><%= scholarship.examSchedule ? scholarship.examSchedule.notes || '' : '' %></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closeExamModal()">Cancel</button>
          <button type="submit" class="btn btn-primary" id="saveExamBtn">Save Schedule</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Announcement Modal -->
  <div class="modal-overlay" id="announcementModal">
    <div class="modal" style="max-width: 600px;">
      <div class="modal-header">
        <h3>Send Announcement</h3>
        <button class="modal-close" onclick="closeAnnouncementModal()">&times;</button>
      </div>
      <form id="announcementForm">
        <div class="modal-body">
          <div class="form-group">
            <label for="audience">Send To *</label>
            <select id="audience" name="audience" required style="width: 100%; padding: 0.75rem; border: 1px solid var(--border-color); border-radius: var(--radius);">
              <option value="all">All Applicants</option>
              <option value="grantees">Grantees / Approved Students Only</option>
            </select>
          </div>
          <div class="form-group">
            <label for="annTitle">Announcement Title *</label>
            <input type="text" id="annTitle" name="title" placeholder="Enter announcement title" required>
          </div>
          <div class="form-group">
            <label for="annMessage">Message *</label>
            <textarea id="annMessage" name="message" placeholder="Enter your announcement message..." required style="min-height: 100px;"></textarea>
          </div>

          <div style="background: var(--bg-secondary); padding: 1rem; border-radius: var(--radius); margin-top: 1rem;">
            <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 1rem;">
              <input type="checkbox" id="isExam" name="isExam" style="width: 18px; height: 18px;">
              <label for="isExam" style="margin: 0; font-weight: 500;">This is an exam schedule announcement</label>
            </div>
            <div id="examFields" style="display: none;">
              <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                <div class="form-group" style="margin-bottom: 0.5rem;">
                  <label for="annExamDate">Exam Date</label>
                  <input type="date" id="annExamDate" name="examDate">
                </div>
                <div class="form-group" style="margin-bottom: 0.5rem;">
                  <label for="annExamTime">Exam Time</label>
                  <input type="time" id="annExamTime" name="examTime">
                </div>
              </div>
              <div class="form-group" style="margin-bottom: 0;">
                <label for="annExamLocation">Location/Venue</label>
                <input type="text" id="annExamLocation" name="examLocation" placeholder="e.g., Room 101, Main Building">
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closeAnnouncementModal()">Cancel</button>
          <button type="submit" class="btn btn-primary" id="sendAnnouncementBtn">Send Announcement</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Toast -->
  <div class="toast" id="toast">
    <span id="toastMessage">Saved!</span>
  </div>

  <script src="/js/sidebar.js"></script>
  <script>
    function openExamModal(isEdit) {
      document.getElementById('examModalTitle').textContent = isEdit ? 'Update Exam Schedule' : 'Set Exam Schedule';
      document.getElementById('examModal').classList.add('show');
    }

    function closeExamModal() {
      document.getElementById('examModal').classList.remove('show');
    }

    function showToast(message, isError = false) {
      const toast = document.getElementById('toast');
      document.getElementById('toastMessage').textContent = message;
      toast.style.background = isError ? 'var(--danger-500)' : 'var(--success-500)';
      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 3000);
    }

    document.getElementById('examForm').addEventListener('submit', async function(e) {
      e.preventDefault();

      const btn = document.getElementById('saveExamBtn');
      btn.disabled = true;
      btn.textContent = 'Saving...';

      const data = {
        date: document.getElementById('examDate').value,
        time: document.getElementById('examTime').value,
        venue: document.getElementById('examVenue').value,
        notes: document.getElementById('examNotes').value
      };

      try {
        const response = await fetch('/sponsor/offers/<%= scholarship.id %>/exam-schedule', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
          showToast('Exam schedule saved successfully!');
          closeExamModal();
          setTimeout(() => window.location.reload(), 1000);
        } else {
          showToast(result.error || 'Failed to save schedule', true);
        }
      } catch (error) {
        showToast('An error occurred', true);
      } finally {
        btn.disabled = false;
        btn.textContent = 'Save Schedule';
      }
    });

    // Close modal on outside click
    document.getElementById('examModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeExamModal();
      }
    });

    // Announcement Modal Functions
    function openAnnouncementModal() {
      document.getElementById('announcementModal').classList.add('show');
    }

    function closeAnnouncementModal() {
      document.getElementById('announcementModal').classList.remove('show');
      document.getElementById('announcementForm').reset();
      document.getElementById('examFields').style.display = 'none';
    }

    // Toggle exam fields
    document.getElementById('isExam').addEventListener('change', function() {
      const examFields = document.getElementById('examFields');
      examFields.style.display = this.checked ? 'block' : 'none';
      if (this.checked) {
        document.getElementById('annExamDate').required = true;
        document.getElementById('annExamTime').required = true;
      } else {
        document.getElementById('annExamDate').required = false;
        document.getElementById('annExamTime').required = false;
      }
    });

    // Submit announcement
    document.getElementById('announcementForm').addEventListener('submit', async function(e) {
      e.preventDefault();

      const btn = document.getElementById('sendAnnouncementBtn');
      btn.disabled = true;
      btn.textContent = 'Sending...';

      const isExam = document.getElementById('isExam').checked;
      const data = {
        audience: document.getElementById('audience').value,
        title: document.getElementById('annTitle').value,
        message: document.getElementById('annMessage').value
      };

      if (isExam) {
        data.examDate = document.getElementById('annExamDate').value;
        data.examTime = document.getElementById('annExamTime').value;
        data.examLocation = document.getElementById('annExamLocation').value;
      }

      try {
        const response = await fetch('/sponsor/offers/<%= scholarship.id %>/announcements', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (result.success) {
          showToast(result.message || 'Announcement sent successfully!');
          closeAnnouncementModal();
        } else {
          showToast(result.error || 'Failed to send announcement', true);
        }
      } catch (error) {
        showToast('An error occurred', true);
      } finally {
        btn.disabled = false;
        btn.textContent = 'Send Announcement';
      }
    });

    // Close announcement modal on outside click
    document.getElementById('announcementModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeAnnouncementModal();
      }
    });
  </script>
</body>
</html>
