<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Scholarship Offer</title>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/topbar.css">
  <link rel="stylesheet" href="/css/footer.css">
  <style>
    .scholarship-page {
      max-width: 800px;
      margin: 0 auto;
    }

    .scholarship-card {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      box-shadow: var(--shadow);
      overflow: hidden;
    }

    .scholarship-header {
      background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-700) 100%);
      color: white;
      padding: 2rem;
      text-align: center;
    }

    .scholarship-header h1 {
      font-size: 1.75rem;
      margin-bottom: 0.5rem;
      color: white;
    }

    .scholarship-header p {
      opacity: 0.95;
      font-size: 0.9375rem;
      color: white;
    }

    .form-body {
      padding: 2rem;
    }

    .form-section {
      margin-bottom: 2rem;
    }

    .section-title {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      color: var(--primary-color);
      font-size: 1.125rem;
      font-weight: 600;
      margin-bottom: 1.25rem;
      padding-bottom: 0.75rem;
      border-bottom: 2px solid var(--border-color);
    }

    .form-row {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    @media (max-width: 640px) {
      .form-row {
        grid-template-columns: 1fr;
      }
    }

    .form-group {
      margin-bottom: 1.25rem;
    }

    .form-group label {
      display: block;
      color: var(--text-primary);
      font-size: 0.875rem;
      margin-bottom: 0.5rem;
      font-weight: 500;
    }

    .form-group label .required {
      color: var(--danger-500);
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 1px solid var(--border-color);
      border-radius: var(--radius);
      font-size: 0.9375rem;
      transition: all var(--transition);
      background: var(--bg-primary);
      color: var(--text-primary);
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px var(--primary-100);
    }

    .form-group textarea {
      min-height: 80px;
      resize: vertical;
    }

    .form-hint {
      font-size: 0.8125rem;
      color: var(--text-muted);
      margin-top: 0.375rem;
    }

    /* Checkbox grid for courses, year levels, and skills */
    .checkbox-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
      gap: 0.75rem;
    }

    .checkbox-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.625rem 0.875rem;
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: var(--radius);
      cursor: pointer;
      transition: all var(--transition);
    }

    .checkbox-item:hover {
      border-color: var(--primary-color);
      background: var(--primary-50);
    }

    .checkbox-item input {
      width: auto;
      margin: 0;
      cursor: pointer;
      pointer-events: none;
    }

    .checkbox-item.checked {
      background: var(--primary-50);
      border-color: var(--primary-color);
    }

    .checkbox-item label {
      margin: 0;
      cursor: pointer;
      font-weight: 400;
      color: var(--text-primary);
    }

    /* Submit button */
    .submit-section {
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid var(--border-color);
    }

    .btn-submit {
      width: 100%;
      padding: 1rem;
      background: var(--primary-gradient);
      color: white;
      border: none;
      border-radius: var(--radius);
      font-size: 1.0625rem;
      font-weight: 600;
      cursor: pointer;
      transition: all var(--transition);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .btn-submit:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
    }

    .btn-submit:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }

    /* Button group for submit actions */
    .button-group {
      display: flex;
      gap: 1rem;
    }
    .btn-draft {
      flex: 1;
      padding: 1rem;
      background: var(--bg-secondary);
      color: var(--text-primary);
      border: 1px solid var(--border-color);
      border-radius: var(--radius);
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: all var(--transition);
    }
    .btn-draft:hover {
      background: var(--bg-tertiary);
      border-color: var(--primary-color);
    }
    .btn-preview {
      padding: 1rem 1.5rem;
      background: white;
      color: var(--primary-color);
      border: 2px solid var(--primary-color);
      border-radius: var(--radius);
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: all var(--transition);
    }
    .btn-preview:hover {
      background: var(--primary-50);
    }
    @media (max-width: 640px) {
      .button-group {
        flex-direction: column;
      }
    }

    /* Preview Modal */
    .preview-modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0,0,0,0.5);
      z-index: 1000;
      align-items: center;
      justify-content: center;
      padding: 1rem;
    }
    .preview-modal.active {
      display: flex;
    }
    .preview-content {
      background: white;
      border-radius: var(--radius-md);
      max-width: 800px;
      width: 100%;
      max-height: 90vh;
      overflow-y: auto;
    }
    .preview-header {
      background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-700) 100%);
      color: white;
      padding: 1.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .preview-header h2 {
      margin: 0;
      color: white;
    }
    .preview-close {
      background: rgba(255,255,255,0.2);
      border: none;
      color: white;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      font-size: 1.5rem;
      cursor: pointer;
    }
    .preview-body {
      padding: 1.5rem;
    }
    .preview-section {
      margin-bottom: 1.5rem;
    }
    .preview-section h4 {
      color: var(--primary-color);
      margin-bottom: 0.75rem;
      font-size: 1rem;
    }
    .preview-row {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 0.5rem;
    }
    .preview-label {
      font-weight: 500;
      color: var(--text-secondary);
      min-width: 140px;
    }
    .preview-value {
      color: var(--text-primary);
    }
    .preview-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }
    .preview-tag {
      background: var(--primary-50);
      color: var(--primary-700);
      padding: 0.25rem 0.75rem;
      border-radius: 999px;
      font-size: 0.875rem;
    }
    .draft-badge {
      display: inline-block;
      background: #fbbf24;
      color: #78350f;
      padding: 0.25rem 0.75rem;
      border-radius: 999px;
      font-size: 0.75rem;
      font-weight: 600;
      margin-left: 0.5rem;
    }
  </style>
</head>
<body>
  <%- include('../partials/sidebar_sponsor') %>

  <div class="main-wrapper">
    <%- include('../partials/topbar', { pageTitle: 'Add Scholarship' }) %>

    <main class="page-content">
      <div class="scholarship-page">
        <div class="scholarship-card">
          <div class="scholarship-header">
            <h1>Add Scholarship Offer</h1>
            <p>Create a new scholarship opportunity for students</p>
          </div>

          <div class="form-body">
            <form action="/sponsor/add-offer" method="POST" id="scholarshipForm">
              <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">

              <!-- Scholarship Information -->
              <div class="form-section">
                <h2 class="section-title">Scholarship Information</h2>

                <div class="form-group">
                  <label>Scholarship Name <span class="required">*</span></label>
                  <input type="text" name="scholarshipName" placeholder="Enter scholarship name" required>
                </div>

                <div class="form-group">
                  <label>Sponsor / Organization Name <span class="required">*</span></label>
                  <input type="text" name="organizationName" placeholder="Enter organization name" required>
                </div>

                <div class="form-group">
                  <label>Scholarship Type <span class="required">*</span></label>
                  <select name="scholarshipType" required>
                    <option value="">Select type...</option>
                    <option value="Merit">Merit-based (Academic Excellence)</option>
                    <option value="Need-based">Need-based (Financial Aid)</option>
                    <option value="Athletic">Athletic (Sports)</option>
                    <option value="Leadership">Leadership</option>
                    <option value="Arts">Arts & Creativity</option>
                    <option value="STEM">STEM (Science & Technology)</option>
                    <option value="Community Service">Community Service</option>
                  </select>
                </div>

                <div class="form-group">
                  <label>Scholarship Description</label>
                  <textarea name="description" placeholder="Describe the scholarship, its goals, and benefits..."></textarea>
                </div>
              </div>

              <!-- Qualification Criteria -->
              <div class="form-section">
                <h2 class="section-title">Qualification Criteria</h2>

                <div class="form-row">
                  <div class="form-group">
                    <label>Minimum GPA Requirement <span class="required">*</span></label>
                    <input type="number" name="minGPA" step="0.01" min="1.0" max="5.0" placeholder="e.g., 1.50 or 3.00" required>
                    <div class="form-hint">Enter GPA (1.0-5.0 scale)</div>
                  </div>

                  <div class="form-group">
                    <label>Slots Available <span class="required">*</span></label>
                    <input type="number" name="slotsAvailable" min="1" placeholder="Number of recipients" required>
                  </div>
                </div>

                <div class="form-group">
                  <label>Eligible Courses / Programs</label>
                  <div class="form-hint" style="margin-bottom: 0.75rem;">Select courses that qualify for this scholarship (leave all unchecked for any course)</div>
                  <div class="checkbox-grid">
                    <%
                      const courseOptions = [
                        'Computer Science', 'Information Technology', 'Engineering', 'Business Administration',
                        'Accountancy', 'Education', 'Nursing', 'Medical Technology',
                        'Psychology', 'Architecture', 'Fine Arts', 'Mass Communication',
                        'Hospitality Management', 'Tourism', 'Criminology', 'Other'
                      ];
                    %>
                    <% courseOptions.forEach(course => { %>
                      <div class="checkbox-item" onclick="toggleCheckbox(this)">
                        <input type="checkbox" name="eligibleCourses" value="<%= course %>">
                        <label><%= course %></label>
                      </div>
                    <% }) %>
                  </div>
                </div>

                <div class="form-group">
                  <label>Eligible Year Levels</label>
                  <div class="form-hint" style="margin-bottom: 0.75rem;">Select year levels that qualify (leave all unchecked for any year level)</div>
                  <div class="checkbox-grid">
                    <%
                      const yearOptions = ['1st Year', '2nd Year', '3rd Year', '4th Year', '5th Year', 'Graduate'];
                    %>
                    <% yearOptions.forEach(year => { %>
                      <div class="checkbox-item" onclick="toggleCheckbox(this)">
                        <input type="checkbox" name="eligibleYearLevels" value="<%= year %>">
                        <label><%= year %></label>
                      </div>
                    <% }) %>
                  </div>
                </div>

                <div class="form-group">
                  <label>Income Limit (for need-based scholarships)</label>
                  <select name="incomeLimit">
                    <option value="">Not applicable / Any income level</option>
                    <option value="below_10k">Below ₱10,000 monthly</option>
                    <option value="below_20k">Below ₱20,000 monthly</option>
                    <option value="below_30k">Below ₱30,000 monthly</option>
                    <option value="below_50k">Below ₱50,000 monthly</option>
                  </select>
                  <div class="form-hint">Students with family income at or below this limit will be prioritized</div>
                </div>
              </div>

              <!-- Required Skills & Qualities -->
              <div class="form-section">
                <h2 class="section-title">Required Skills & Qualities</h2>

                <div class="form-group">
                  <label>Select skills/qualities required or preferred for this scholarship</label>
                  <div class="checkbox-grid">
                    <%
                      const skillOptions = [
                        'Leadership', 'Communication', 'Teamwork', 'Problem Solving',
                        'Critical Thinking', 'Programming', 'Research', 'Writing',
                        'Public Speaking', 'Innovation', 'Creativity', 'Time Management',
                        'Community Service', 'Sports', 'Music', 'Arts'
                      ];
                    %>
                    <% skillOptions.forEach(skill => { %>
                      <div class="checkbox-item" onclick="toggleCheckbox(this)">
                        <input type="checkbox" name="requiredSkills" value="<%= skill %>">
                        <label><%= skill %></label>
                      </div>
                    <% }) %>
                  </div>
                </div>
              </div>

              <!-- Document Requirements -->
              <div class="form-section">
                <h2 class="section-title">Document Requirements</h2>

                <div class="form-group">
                  <label>Required Documents</label>
                  <div class="checkbox-grid">
                    <%
                      const docOptions = [
                        'Transcript of Grades', 'Certificate of Enrollment', 'School ID',
                        'Personal Essay', 'Letter of Recommendation', 'Income Certificate',
                        'Birth Certificate', 'Photo ID', 'Resume/CV'
                      ];
                    %>
                    <% docOptions.forEach(doc => { %>
                      <div class="checkbox-item" onclick="toggleCheckbox(this)">
                        <input type="checkbox" name="requiredDocuments" value="<%= doc %>">
                        <label><%= doc %></label>
                      </div>
                    <% }) %>
                  </div>
                </div>

                <div class="form-group">
                  <label>Additional Document Requirements</label>
                  <textarea name="additionalDocuments" placeholder="Specify any other documents needed..."></textarea>
                </div>
              </div>

              <!-- Duration -->
              <div class="form-section">
                <h2 class="section-title">Application Period</h2>

                <div class="form-row">
                  <div class="form-group">
                    <label>Start Date <span class="required">*</span></label>
                    <input type="date" name="startDate" required>
                    <div class="form-hint">When applications open</div>
                  </div>

                  <div class="form-group">
                    <label>End Date / Deadline <span class="required">*</span></label>
                    <input type="date" name="endDate" required>
                    <div class="form-hint">Application deadline</div>
                  </div>
                </div>
              </div>

              <!-- Status -->
              <div class="form-section">
                <h2 class="section-title">Status</h2>

                <div class="form-group">
                  <label>Scholarship Status <span class="required">*</span></label>
                  <select name="status" required>
                    <option value="Open">Open for Applications</option>
                    <option value="Closed">Closed</option>
                  </select>
                </div>
              </div>

              <!-- Submit -->
              <div class="submit-section">
                <div style="display: flex; gap: 1rem; margin-bottom: 1rem;">
                  <button type="button" class="btn-preview" onclick="showPreview()">Preview</button>
                </div>
                <div class="button-group">
                  <button type="button" class="btn-draft" id="draftBtn" onclick="saveAsDraft()">
                    Save as Draft
                  </button>
                  <button type="submit" class="btn-submit" id="submitBtn" style="flex: 2;">
                    Submit for Approval
                  </button>
                </div>
              </div>
              <input type="hidden" name="isDraft" id="isDraftInput" value="false">
            </form>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </div>

  <!-- Preview Modal -->
  <div class="preview-modal" id="previewModal">
    <div class="preview-content">
      <div class="preview-header">
        <h2>Scholarship Preview</h2>
        <button class="preview-close" onclick="closePreview()">&times;</button>
      </div>
      <div class="preview-body" id="previewBody">
        <!-- Content will be populated by JavaScript -->
      </div>
    </div>
  </div>

  <script src="/js/sidebar.js"></script>
  <script>
    // Toggle checkbox styling
    function toggleCheckbox(item) {
      const checkbox = item.querySelector('input[type="checkbox"]');
      checkbox.checked = !checkbox.checked;
      item.classList.toggle('checked', checkbox.checked);
    }

    // Get form data as object
    function getFormData() {
      const form = document.getElementById('scholarshipForm');
      const data = {};

      data.scholarshipName = form.querySelector('[name="scholarshipName"]').value;
      data.organizationName = form.querySelector('[name="organizationName"]').value;
      data.scholarshipType = form.querySelector('[name="scholarshipType"]').value;
      data.description = form.querySelector('[name="description"]').value;
      data.minGPA = form.querySelector('[name="minGPA"]').value;
      data.slotsAvailable = form.querySelector('[name="slotsAvailable"]').value;
      data.incomeLimit = form.querySelector('[name="incomeLimit"]').value;
      data.additionalDocuments = form.querySelector('[name="additionalDocuments"]').value;
      data.startDate = form.querySelector('[name="startDate"]').value;
      data.endDate = form.querySelector('[name="endDate"]').value;
      data.status = form.querySelector('[name="status"]').value;

      // Get checked checkboxes
      data.eligibleCourses = Array.from(form.querySelectorAll('[name="eligibleCourses"]:checked')).map(cb => cb.value);
      data.eligibleYearLevels = Array.from(form.querySelectorAll('[name="eligibleYearLevels"]:checked')).map(cb => cb.value);
      data.requiredSkills = Array.from(form.querySelectorAll('[name="requiredSkills"]:checked')).map(cb => cb.value);
      data.requiredDocuments = Array.from(form.querySelectorAll('[name="requiredDocuments"]:checked')).map(cb => cb.value);

      return data;
    }

    // Show preview modal
    function showPreview() {
      const data = getFormData();
      const previewBody = document.getElementById('previewBody');

      const formatDate = (dateStr) => {
        if (!dateStr) return 'Not set';
        return new Date(dateStr).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
      };

      const incomeLimitLabels = {
        'below_10k': 'Below PHP 10,000/month',
        'below_20k': 'Below PHP 20,000/month',
        'below_30k': 'Below PHP 30,000/month',
        'below_50k': 'Below PHP 50,000/month'
      };

      let html = `
        <div class="preview-section">
          <h4>Scholarship Information</h4>
          <div class="preview-row">
            <span class="preview-label">Name:</span>
            <span class="preview-value">${data.scholarshipName || 'Not provided'}</span>
          </div>
          <div class="preview-row">
            <span class="preview-label">Organization:</span>
            <span class="preview-value">${data.organizationName || 'Not provided'}</span>
          </div>
          <div class="preview-row">
            <span class="preview-label">Type:</span>
            <span class="preview-value">${data.scholarshipType || 'Not selected'}</span>
          </div>
          <div class="preview-row">
            <span class="preview-label">Description:</span>
            <span class="preview-value">${data.description || 'No description'}</span>
          </div>
        </div>

        <div class="preview-section">
          <h4>Qualification Criteria</h4>
          <div class="preview-row">
            <span class="preview-label">Minimum GPA:</span>
            <span class="preview-value">${data.minGPA || 'Not set'}</span>
          </div>
          <div class="preview-row">
            <span class="preview-label">Slots Available:</span>
            <span class="preview-value">${data.slotsAvailable || 'Not set'}</span>
          </div>
          <div class="preview-row">
            <span class="preview-label">Income Limit:</span>
            <span class="preview-value">${data.incomeLimit ? incomeLimitLabels[data.incomeLimit] : 'Any income level'}</span>
          </div>
          <div class="preview-row">
            <span class="preview-label">Eligible Courses:</span>
            <span class="preview-value">
              ${data.eligibleCourses.length > 0 ? `<div class="preview-tags">${data.eligibleCourses.map(c => `<span class="preview-tag">${c}</span>`).join('')}</div>` : 'Any course'}
            </span>
          </div>
          <div class="preview-row">
            <span class="preview-label">Year Levels:</span>
            <span class="preview-value">
              ${data.eligibleYearLevels.length > 0 ? `<div class="preview-tags">${data.eligibleYearLevels.map(y => `<span class="preview-tag">${y}</span>`).join('')}</div>` : 'Any year level'}
            </span>
          </div>
        </div>

        <div class="preview-section">
          <h4>Required Skills</h4>
          <div class="preview-tags">
            ${data.requiredSkills.length > 0 ? data.requiredSkills.map(s => `<span class="preview-tag">${s}</span>`).join('') : '<span style="color: var(--text-muted);">No specific skills required</span>'}
          </div>
        </div>

        <div class="preview-section">
          <h4>Document Requirements</h4>
          <div class="preview-tags">
            ${data.requiredDocuments.length > 0 ? data.requiredDocuments.map(d => `<span class="preview-tag">${d}</span>`).join('') : '<span style="color: var(--text-muted);">No documents specified</span>'}
          </div>
          ${data.additionalDocuments ? `<p style="margin-top: 0.5rem; color: var(--text-secondary);"><strong>Additional:</strong> ${data.additionalDocuments}</p>` : ''}
        </div>

        <div class="preview-section">
          <h4>Application Period</h4>
          <div class="preview-row">
            <span class="preview-label">Start Date:</span>
            <span class="preview-value">${formatDate(data.startDate)}</span>
          </div>
          <div class="preview-row">
            <span class="preview-label">Deadline:</span>
            <span class="preview-value">${formatDate(data.endDate)}</span>
          </div>
        </div>
      `;

      previewBody.innerHTML = html;
      document.getElementById('previewModal').classList.add('active');
    }

    // Close preview modal
    function closePreview() {
      document.getElementById('previewModal').classList.remove('active');
    }

    // Close modal on outside click
    document.getElementById('previewModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closePreview();
      }
    });

    // Save as draft
    function saveAsDraft() {
      document.getElementById('isDraftInput').value = 'true';
      document.getElementById('draftBtn').disabled = true;
      document.getElementById('draftBtn').textContent = 'Saving...';
      document.getElementById('scholarshipForm').submit();
    }

    // Form validation
    document.getElementById('scholarshipForm').addEventListener('submit', function(e) {
      const isDraft = document.getElementById('isDraftInput').value === 'true';

      // Skip validation for drafts
      if (!isDraft) {
        const startDate = new Date(document.querySelector('[name="startDate"]').value);
        const endDate = new Date(document.querySelector('[name="endDate"]').value);

        if (endDate <= startDate) {
          e.preventDefault();
          alert('End date must be after start date');
          return;
        }
      }

      // Disable button to prevent double submission
      if (!isDraft) {
        document.getElementById('submitBtn').disabled = true;
        document.getElementById('submitBtn').textContent = 'Submitting...';
      }
    });
  </script>
</body>
</html>
