<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Scholarship Offer</title>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/topbar.css">
  <link rel="stylesheet" href="/css/footer.css">
  <style>
    .scholarship-page {
      max-width: 800px;
      margin: 0 auto;
    }

    .scholarship-card {
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      box-shadow: var(--shadow);
      overflow: hidden;
    }

    .scholarship-header {
      background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-700) 100%);
      color: white;
      padding: 2rem;
      text-align: center;
    }

    .scholarship-header h1 {
      font-size: 1.75rem;
      margin-bottom: 0.5rem;
      color: white;
    }

    .scholarship-header p {
      opacity: 0.95;
      font-size: 0.9375rem;
      color: white;
    }

    .form-body {
      padding: 2rem;
    }

    .form-section {
      margin-bottom: 2rem;
    }

    .section-title {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      color: var(--primary-color);
      font-size: 1.125rem;
      font-weight: 600;
      margin-bottom: 1.25rem;
      padding-bottom: 0.75rem;
      border-bottom: 2px solid var(--border-color);
    }

    .form-row {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    @media (max-width: 640px) {
      .form-row {
        grid-template-columns: 1fr;
      }
    }

    .form-group {
      margin-bottom: 1.25rem;
    }

    .form-group label {
      display: block;
      color: var(--text-primary);
      font-size: 0.875rem;
      margin-bottom: 0.5rem;
      font-weight: 500;
    }

    .form-group label .required {
      color: var(--danger-500);
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 1px solid var(--border-color);
      border-radius: var(--radius);
      font-size: 0.9375rem;
      transition: all var(--transition);
      background: var(--bg-primary);
      color: var(--text-primary);
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px var(--primary-100);
    }

    .form-group textarea {
      min-height: 80px;
      resize: vertical;
    }

    .form-hint {
      font-size: 0.8125rem;
      color: var(--text-muted);
      margin-top: 0.375rem;
    }

    /* Checkbox grid for courses, year levels, and skills */
    .checkbox-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
      gap: 0.75rem;
    }

    .checkbox-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.625rem 0.875rem;
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: var(--radius);
      cursor: pointer;
      transition: all var(--transition);
    }

    .checkbox-item:hover {
      border-color: var(--primary-color);
      background: var(--primary-50);
    }

    .checkbox-item input {
      width: auto;
      margin: 0;
      cursor: pointer;
      pointer-events: none;
    }

    .checkbox-item.checked {
      background: var(--primary-50);
      border-color: var(--primary-color);
    }

    .checkbox-item label {
      margin: 0;
      cursor: pointer;
      font-weight: 400;
      color: var(--text-primary);
    }

    /* Submit button */
    .submit-section {
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid var(--border-color);
    }

    .btn-submit {
      width: 100%;
      padding: 1rem;
      background: var(--primary-gradient);
      color: white;
      border: none;
      border-radius: var(--radius);
      font-size: 1.0625rem;
      font-weight: 600;
      cursor: pointer;
      transition: all var(--transition);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .btn-submit:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
    }

    .btn-submit:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }
  </style>
</head>
<body>
  <%- include('../partials/sidebar_sponsor') %>

  <div class="main-wrapper">
    <%- include('../partials/topbar', { pageTitle: 'Add Scholarship' }) %>

    <main class="page-content">
      <div class="scholarship-page">
        <div class="scholarship-card">
          <div class="scholarship-header">
            <h1>Add Scholarship Offer</h1>
            <p>Create a new scholarship opportunity for students</p>
          </div>

          <div class="form-body">
            <form action="/sponsor/add-offer" method="POST" id="scholarshipForm">

              <!-- Scholarship Information -->
              <div class="form-section">
                <h2 class="section-title">Scholarship Information</h2>

                <div class="form-group">
                  <label>Scholarship Name <span class="required">*</span></label>
                  <input type="text" name="scholarshipName" placeholder="Enter scholarship name" required>
                </div>

                <div class="form-group">
                  <label>Sponsor / Organization Name <span class="required">*</span></label>
                  <input type="text" name="organizationName" placeholder="Enter organization name" required>
                </div>

                <div class="form-group">
                  <label>Scholarship Type <span class="required">*</span></label>
                  <select name="scholarshipType" required>
                    <option value="">Select type...</option>
                    <option value="Merit">Merit-based (Academic Excellence)</option>
                    <option value="Need-based">Need-based (Financial Aid)</option>
                    <option value="Athletic">Athletic (Sports)</option>
                    <option value="Leadership">Leadership</option>
                    <option value="Arts">Arts & Creativity</option>
                    <option value="STEM">STEM (Science & Technology)</option>
                    <option value="Community Service">Community Service</option>
                  </select>
                </div>

                <div class="form-group">
                  <label>Scholarship Description</label>
                  <textarea name="description" placeholder="Describe the scholarship, its goals, and benefits..."></textarea>
                </div>
              </div>

              <!-- Qualification Criteria -->
              <div class="form-section">
                <h2 class="section-title">Qualification Criteria</h2>

                <div class="form-row">
                  <div class="form-group">
                    <label>Minimum GPA Requirement <span class="required">*</span></label>
                    <input type="number" name="minGPA" step="0.01" min="1.0" max="5.0" placeholder="e.g., 1.50 or 3.00" required>
                    <div class="form-hint">Enter GPA (1.0-5.0 scale)</div>
                  </div>

                  <div class="form-group">
                    <label>Slots Available <span class="required">*</span></label>
                    <input type="number" name="slotsAvailable" min="1" placeholder="Number of recipients" required>
                  </div>
                </div>

                <div class="form-group">
                  <label>Eligible Courses / Programs</label>
                  <div class="form-hint" style="margin-bottom: 0.75rem;">Select courses that qualify for this scholarship (leave all unchecked for any course)</div>
                  <div class="checkbox-grid">
                    <%
                      const courseOptions = [
                        'Computer Science', 'Information Technology', 'Engineering', 'Business Administration',
                        'Accountancy', 'Education', 'Nursing', 'Medical Technology',
                        'Psychology', 'Architecture', 'Fine Arts', 'Mass Communication',
                        'Hospitality Management', 'Tourism', 'Criminology', 'Other'
                      ];
                    %>
                    <% courseOptions.forEach(course => { %>
                      <div class="checkbox-item" onclick="toggleCheckbox(this)">
                        <input type="checkbox" name="eligibleCourses" value="<%= course %>">
                        <label><%= course %></label>
                      </div>
                    <% }) %>
                  </div>
                </div>

                <div class="form-group">
                  <label>Eligible Year Levels</label>
                  <div class="form-hint" style="margin-bottom: 0.75rem;">Select year levels that qualify (leave all unchecked for any year level)</div>
                  <div class="checkbox-grid">
                    <%
                      const yearOptions = ['1st Year', '2nd Year', '3rd Year', '4th Year', '5th Year', 'Graduate'];
                    %>
                    <% yearOptions.forEach(year => { %>
                      <div class="checkbox-item" onclick="toggleCheckbox(this)">
                        <input type="checkbox" name="eligibleYearLevels" value="<%= year %>">
                        <label><%= year %></label>
                      </div>
                    <% }) %>
                  </div>
                </div>

                <div class="form-group">
                  <label>Income Limit (for need-based scholarships)</label>
                  <select name="incomeLimit">
                    <option value="">Not applicable / Any income level</option>
                    <option value="below_10k">Below ₱10,000 monthly</option>
                    <option value="below_20k">Below ₱20,000 monthly</option>
                    <option value="below_30k">Below ₱30,000 monthly</option>
                    <option value="below_50k">Below ₱50,000 monthly</option>
                  </select>
                  <div class="form-hint">Students with family income at or below this limit will be prioritized</div>
                </div>
              </div>

              <!-- Required Skills & Qualities -->
              <div class="form-section">
                <h2 class="section-title">Required Skills & Qualities</h2>

                <div class="form-group">
                  <label>Select skills/qualities required or preferred for this scholarship</label>
                  <div class="checkbox-grid">
                    <%
                      const skillOptions = [
                        'Leadership', 'Communication', 'Teamwork', 'Problem Solving',
                        'Critical Thinking', 'Programming', 'Research', 'Writing',
                        'Public Speaking', 'Innovation', 'Creativity', 'Time Management',
                        'Community Service', 'Sports', 'Music', 'Arts'
                      ];
                    %>
                    <% skillOptions.forEach(skill => { %>
                      <div class="checkbox-item" onclick="toggleCheckbox(this)">
                        <input type="checkbox" name="requiredSkills" value="<%= skill %>">
                        <label><%= skill %></label>
                      </div>
                    <% }) %>
                  </div>
                </div>
              </div>

              <!-- Document Requirements -->
              <div class="form-section">
                <h2 class="section-title">Document Requirements</h2>

                <div class="form-group">
                  <label>Required Documents</label>
                  <div class="checkbox-grid">
                    <%
                      const docOptions = [
                        'Transcript of Grades', 'Certificate of Enrollment', 'School ID',
                        'Personal Essay', 'Letter of Recommendation', 'Income Certificate',
                        'Birth Certificate', 'Photo ID', 'Resume/CV'
                      ];
                    %>
                    <% docOptions.forEach(doc => { %>
                      <div class="checkbox-item" onclick="toggleCheckbox(this)">
                        <input type="checkbox" name="requiredDocuments" value="<%= doc %>">
                        <label><%= doc %></label>
                      </div>
                    <% }) %>
                  </div>
                </div>

                <div class="form-group">
                  <label>Additional Document Requirements</label>
                  <textarea name="additionalDocuments" placeholder="Specify any other documents needed..."></textarea>
                </div>
              </div>

              <!-- Duration -->
              <div class="form-section">
                <h2 class="section-title">Application Period</h2>

                <div class="form-row">
                  <div class="form-group">
                    <label>Start Date <span class="required">*</span></label>
                    <input type="date" name="startDate" required>
                    <div class="form-hint">When applications open</div>
                  </div>

                  <div class="form-group">
                    <label>End Date / Deadline <span class="required">*</span></label>
                    <input type="date" name="endDate" required>
                    <div class="form-hint">Application deadline</div>
                  </div>
                </div>
              </div>

              <!-- Status -->
              <div class="form-section">
                <h2 class="section-title">Status</h2>

                <div class="form-group">
                  <label>Scholarship Status <span class="required">*</span></label>
                  <select name="status" required>
                    <option value="Open">Open for Applications</option>
                    <option value="Closed">Closed</option>
                  </select>
                </div>
              </div>

              <!-- Submit -->
              <div class="submit-section">
                <button type="submit" class="btn-submit" id="submitBtn">
                  Create Scholarship Offer
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </div>

  <script src="/js/sidebar.js"></script>
  <script>
    // Toggle checkbox styling
    function toggleCheckbox(item) {
      const checkbox = item.querySelector('input[type="checkbox"]');
      checkbox.checked = !checkbox.checked;
      item.classList.toggle('checked', checkbox.checked);
    }

    // Form validation
    document.getElementById('scholarshipForm').addEventListener('submit', function(e) {
      const startDate = new Date(document.querySelector('[name="startDate"]').value);
      const endDate = new Date(document.querySelector('[name="endDate"]').value);

      if (endDate <= startDate) {
        e.preventDefault();
        alert('End date must be after start date');
        return;
      }

      // Disable button to prevent double submission
      document.getElementById('submitBtn').disabled = true;
      document.getElementById('submitBtn').textContent = 'Creating...';
    });
  </script>
</body>
</html>
